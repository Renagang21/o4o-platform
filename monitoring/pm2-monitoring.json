{
  "monitoring": {
    "pm2_plus": {
      "enabled": false,
      "url": "https://app.pm2.io"
    },
    "local": {
      "enabled": true,
      "modules": [
        "pm2-server-monit",
        "pm2-logrotate"
      ]
    },
    "metrics": {
      "cpu_threshold": 80,
      "memory_threshold": 500,
      "restart_threshold": 5,
      "response_time_threshold": 1000
    },
    "alerts": {
      "email": {
        "enabled": false,
        "recipients": []
      },
      "webhook": {
        "enabled": false,
        "url": ""
      },
      "slack": {
        "enabled": false,
        "webhook_url": ""
      }
    }
  }
}