{
  "name": "o4o-platform",
  "version": "0.5.0",
  "description": "O4O Platform - Clean Monorepo Architecture",
  "type": "module",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*",
    "!apps/*.backup",
    "!packages/*.backup"
  ],
  "engines": {
    "node": ">=22.18.0",
    "pnpm": ">=9.0.0"
  },
  "scripts": {
    "// === 개발 스크립트 ===": "",
    "dev": "concurrently \"pnpm run dev:web\" \"pnpm run dev:admin\"",
    "dev:web": "pnpm --filter=@o4o/main-site run dev",
    "dev:admin": "pnpm --filter=@o4o/admin-dashboard run dev",
    "dev:api": "cd apps/api-server && pnpm run dev",
    "start:api": "cd apps/api-server && pnpm run start",
    "// === 빌드 스크립트 ===": "",
    "build": "pnpm run build:packages && pnpm run build:apps",
    "build:packages": "pnpm run build:types && pnpm run build:utils && pnpm run build:ui && pnpm run build:auth-client && pnpm run build:auth-context && pnpm run build:shortcodes",
    "build:apps": "pnpm run build:main-site && pnpm run build:admin",
    "build:apps:all": "pnpm run build:main-site && pnpm run build:api",
    "build:web": "pnpm run build:packages && pnpm run build:main-site && pnpm run build:admin",
    "build:api": "cd apps/api-server && pnpm run build",
    "build:main-site": "cd apps/main-site && pnpm run build",
    "build:admin": "pnpm --filter=@o4o/admin-dashboard run build",
    "build:types": "pnpm --filter=@o4o/types run build",
    "build:utils": "pnpm --filter=@o4o/utils run build",
    "build:ui": "pnpm --filter=@o4o/ui run build",
    "build:auth-client": "pnpm --filter=@o4o/auth-client run build",
    "build:auth-context": "pnpm --filter=@o4o/auth-context run build",
    "build:shortcodes": "pnpm --filter=@o4o/shortcodes run build",
    "// === 블록 플러그인 빌드 (별도 설치 필요) ===": "",
    "build:blocks": "cd packages/block-core && pnpm run build && cd ../blocks/text-content && pnpm run build && cd ../layout-media && pnpm run build && cd ../interactive && pnpm run build && cd ../dynamic && pnpm run build",
    "// === 테스트 & 린트 ===": "",
    "type-check": "./scripts/development/dev.sh type-check",
    "type-check:frontend": "./scripts/development/dev.sh type-check:frontend",
    "lint": "./scripts/development/dev.sh lint",
    "lint:fix": "./scripts/development/dev.sh lint:fix",
    "test": "./scripts/development/dev.sh test",
    "// === 설치 & 정리 ===": "",
    "clean": "./scripts/deploy.sh clean --full",
    "clean:dist": "./scripts/deploy.sh clean",
    "install:quick": "./scripts/install.sh quick",
    "install:split": "./scripts/install.sh split",
    "install:parallel": "./scripts/install.sh parallel",
    "install:blocks": "./scripts/install.sh blocks",
    "ci": "./scripts/install.sh ci",
    "// === 배포 & PM2 ===": "",
    "deploy": "./scripts/deploy.sh deploy",
    "deploy:build": "./scripts/deploy.sh build",
    "deploy:webserver": "./scripts/deploy-to-server.sh webserver",
    "deploy:apiserver": "./scripts/deploy-to-server.sh apiserver",
    "deploy:all": "./scripts/deploy-to-server.sh both",
    "deploy:main-site": "./scripts/deploy-main-site.sh",
    "pm2:start": "./scripts/deploy.sh start",
    "pm2:stop": "./scripts/deploy.sh stop",
    "pm2:restart": "./scripts/deploy.sh restart",
    "// === 서버별 PM2 스크립트 ===": "",
    "pm2:start:local": "pm2 start ecosystem.config.local.cjs",
    "pm2:stop:local": "pm2 stop ecosystem.config.local.cjs",
    "pm2:restart:local": "pm2 restart ecosystem.config.local.cjs",
    "pm2:start:webserver": "pm2 start ecosystem.config.webserver.js",
    "pm2:stop:webserver": "pm2 stop ecosystem.config.webserver.js",
    "pm2:restart:webserver": "pm2 restart ecosystem.config.webserver.js",
    "pm2:start:apiserver": "pm2 start ecosystem.config.apiserver.cjs",
    "pm2:stop:apiserver": "pm2 stop ecosystem.config.apiserver.cjs",
    "pm2:restart:apiserver": "pm2 restart ecosystem.config.apiserver.cjs",
    "// === Git Hook 직접 배포 ===": "",
    "deploy:direct": "git push production main",
    "deploy:force": "git push production main --force",
    "deploy:status": "git log production/main..main --oneline",
    "deploy:log": "ssh ubuntu@admin.neture.co.kr 'tail -f /var/log/o4o-deploy.log'",
    "deploy:log:last": "ssh ubuntu@admin.neture.co.kr 'tail -50 /var/log/o4o-deploy.log'",
    "deploy:check": "curl -s https://admin.neture.co.kr/version.json | jq .",
    "deploy:rollback": "ssh ubuntu@admin.neture.co.kr 'ls -la /var/www/admin-backup/'",
    "deploy:quick": "git add . && git commit -m 'chore: quick deployment' && git push production main",
    "// === 문서 업데이트 ===": "",
    "update:shortcode-docs": "cd apps/admin-dashboard && tsx src/scripts/update-shortcode-reference.ts",
    "update:ai-page-docs": "cd apps/admin-dashboard && tsx src/scripts/update-ai-page-docs.ts",
    "update:docs": "pnpm run update:shortcode-docs && pnpm run update:ai-page-docs"
  },
  "devDependencies": {
    "@eslint/js": "^9.33.0",
    "@swc/core": "1.13.5",
    "@swc/helpers": "0.5.17",
    "@testing-library/react": "16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/axios": "0.9.36",
    "@types/jest": "29.5.14",
    "@types/multer": "2.0.0",
    "@types/node-cron": "3.0.11",
    "@types/react": "18.2.79",
    "@types/react-dom": "18.2.25",
    "@types/sharp": "0.31.1",
    "@types/socket.io-client": "1.4.36",
    "@types/uuid": "10.0.0",
    "@types/wordpress__block-editor": "^11.5.17",
    "@typescript-eslint/eslint-plugin": "^8.46.0",
    "@typescript-eslint/parser": "^8.46.0",
    "@vitejs/plugin-react": "~4.7.0",
    "@vitest/ui": "3.2.4",
    "autoprefixer": "~10.4.16",
    "concurrently": "~7.6.0",
    "eslint": "~9.37.0",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^6.1.1",
    "jest": "29.7.0",
    "pnpm": "^9.12.3",
    "postcss": "~8.4.31",
    "prettier": "3.6.2",
    "rollup-plugin-visualizer": "6.0.3",
    "tailwindcss": "3.4.17",
    "ts-jest": "29.4.1",
    "ts-node": "10.9.2",
    "typescript": "5.4.5",
    "vite": "~5.4.19",
    "vitest": "3.2.4"
  },
  "keywords": [
    "o4o",
    "platform",
    "monorepo",
    "typescript",
    "react",
    "node"
  ],
  "author": "O4O Platform Team",
  "license": "MIT",
  "dependencies": {
    "@hello-pangea/dnd": "^18.0.1",
    "@mui/icons-material": "7.3.1",
    "@mui/material": "7.3.1",
    "@radix-ui/react-alert-dialog": "1.1.14",
    "@radix-ui/react-avatar": "1.1.10",
    "@radix-ui/react-toast": "1.2.14",
    "@tosspayments/payment-sdk": "1.9.1",
    "@types/bcrypt": "6.0.0",
    "@types/cron": "2.0.1",
    "@types/jsonwebtoken": "9.0.10",
    "@types/nodemailer": "6.4.17",
    "adm-zip": "0.5.16",
    "bcrypt": "6.0.0",
    "class-validator": "0.14.2",
    "cron": "4.3.3",
    "dotenv": "^17.2.2",
    "exceljs": "4.4.0",
    "express-validator": "7.2.1",
    "jsonwebtoken": "9.0.2",
    "multer": "2.0.2",
    "node-cache": "5.1.2",
    "nodemailer": "7.0.5",
    "pg": "^8.16.3",
    "rate-limit-redis": "^4.2.1",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "sharp": "0.34.3",
    "slugify": "^1.6.6",
    "swagger-jsdoc": "6.2.8",
    "swagger-ui-express": "5.0.1",
    "uuid": "9.0.1",
    "xml2js": "0.6.2"
  },
  "volta": {
    "node": "22.18.0",
    "npm": "10.9.3"
  },
  "overrides": {
    "zod": "3.23.8",
    "@vitejs/plugin-react": "~4.7.0"
  }
}
