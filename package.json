{
  "name": "o4o-platform",
  "version": "1.0.0",
  "description": "O4O Platform - Clean Monorepo Architecture",
  "type": "module",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*",
    "!apps/*.backup",
    "!packages/*.backup"
  ],
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=10.0.0"
  },
  "overrides": {
    "typescript": "~5.9.2",
    "@typescript-eslint/typescript-estree": {
      "typescript": "~5.9.2"
    },
    "@typescript-eslint/parser": {
      "typescript": "~5.9.2"
    },
    "@typescript-eslint/eslint-plugin": {
      "typescript": "~5.9.2"
    },
    "@typescript-eslint/type-utils": {
      "typescript": "~5.9.2"
    },
    "@typescript-eslint/utils": {
      "typescript": "~5.9.2"
    },
    "typescript-eslint": {
      "typescript": "~5.9.2"
    },
    "react": "19.1.1",
    "react-dom": "19.1.1",
    "@babel/runtime": "^7.26.10"
  },
  "scripts": {
    "dev": "concurrently \"npm run dev:api\" \"npm run dev:web\" \"npm run dev:admin\"",
    "dev:api": "npm run dev --workspace=@o4o/api-server",
    "dev:web": "npm run dev --workspace=@o4o/main-site",
    "dev:admin": "npm run dev --workspace=@o4o/admin-dashboard",
    "dev:ecommerce": "npm run dev --workspace=@o4o/ecommerce",
    "dev:crowdfunding": "npm run dev --workspace=@o4o/crowdfunding",
    "dev:signage": "npm run dev --workspace=@o4o/digital-signage",
    "build": "npm run build:packages && npm run build:apps",
    "build:packages": "npm run build:types && npm run build:utils && npm run build:ui && npm run build:auth-client && npm run build:auth-context && npm run build:crowdfunding-types && npm run build:forum-types && npm run build:shortcodes && npm run build:supplier-connector",
    "build:types": "npm run build --workspace=@o4o/types",
    "build:utils": "npm run build --workspace=@o4o/utils",
    "build:ui": "npm run build --workspace=@o4o/ui",
    "build:auth-client": "npm run build --workspace=@o4o/auth-client",
    "build:auth-context": "npm run build --workspace=@o4o/auth-context",
    "build:crowdfunding-types": "npm run build --workspace=@o4o/crowdfunding-types",
    "build:forum-types": "npm run build --workspace=@o4o/forum-types",
    "build:shortcodes": "npm run build --workspace=@o4o/shortcodes",
    "build:supplier-connector": "npm run build --workspace=@o4o/supplier-connector",
    "build:apps": "npm run build:apps:api && npm run build:apps:frontend",
    "build:apps:api": "npm run build --workspace=@o4o/api-server",
    "build:apps:frontend": "npm run build --workspace=@o4o/main-site && npm run build --workspace=@o4o/admin-dashboard && npm run build --workspace=@o4o/ecommerce && npm run build --workspace=@o4o/crowdfunding && npm run build --workspace=@o4o/forum && npm run build --workspace=@o4o/digital-signage",
    "build:apps:parallel": "concurrently \"npm run build --workspace=@o4o/api-server\" \"npm run build --workspace=@o4o/main-site\" \"npm run build --workspace=@o4o/admin-dashboard\" \"npm run build --workspace=@o4o/ecommerce\" \"npm run build --workspace=@o4o/crowdfunding\" \"npm run build --workspace=@o4o/forum\" \"npm run build --workspace=@o4o/digital-signage\"",
    "build:signage": "npm run build --workspace=@o4o/digital-signage",
    "build:all": "npm run build",
    "build:all:fast": "npm run build:packages && npm run build:apps:parallel",
    "build:production": "npm run clean:dist && npm run build:packages && npm run build:apps",
    "build:safe": "./scripts/build-safe.sh all",
    "build:safe:web": "./scripts/build-safe.sh web",
    "build:safe:api": "./scripts/build-safe.sh api",
    "build:monitor": "./scripts/build-monitor.sh full",
    "build:smart": "./scripts/smart-build.sh",
    "build:smart:full": "./scripts/smart-build.sh full",
    "build:smart:sync": "./scripts/smart-build.sh sync",
    "build:smart:check": "./scripts/smart-build.sh check",
    "build:changed": "./scripts/build-what-changed.sh",
    "build:after-pull": "./scripts/build-what-changed.sh pull",
    "clean:dist": "rm -rf apps/*/dist packages/*/dist",
    "build:api": "npm run build:packages && npm run build --workspace=@o4o/api-server",
    "build:web": "npm run build:packages && npm run build --workspace=@o4o/main-site",
    "build:admin": "npm run build:packages && npm run build --workspace=@o4o/admin-dashboard",
    "build:ecommerce": "npm run build:packages && npm run build --workspace=@o4o/ecommerce",
    "build:crowdfunding": "npm run build:packages && npm run build --workspace=@o4o/crowdfunding",
    "type-check": "./scripts/dev.sh type-check",
    "lint": "./scripts/dev.sh lint",
    "lint:fix": "./scripts/dev.sh lint:fix",
    "test": "./scripts/dev.sh test",
    "test:e2e": "npm run test:e2e --workspaces --if-present",
    "clean": "rm -rf node_modules apps/*/node_modules packages/*/node_modules apps/*/dist packages/*/dist",
    "install:all": "npm install && npm run build"
  },
  "devDependencies": {
    "@eslint/js": "9.33.0",
    "@testing-library/react": "16.3.0",
    "vite": "^5.4.0",
    "@vitejs/plugin-react": "^4.7.0",
    "autoprefixer": "^10.4.20",
    "postcss": "^8.4.49",
    "tailwindcss": "^4.1.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/jest": "29.5.14",
    "@types/node-cron": "3.0.11",
    "@types/react-dom": "19.1.7",
    "@types/socket.io-client": "^1.4.36",
    "@typescript-eslint/eslint-plugin": "8.39.0",
    "@typescript-eslint/parser": "8.39.0",
    "@vitest/ui": "3.2.4",
    "concurrently": "^7.6.0",
    "eslint": "^9.31.0",
    "eslint-plugin-react": "7.37.5",
    "eslint-plugin-react-hooks": "5.2.0",
    "jest": "29.7.0",
    "prettier": "^3.0.0",
    "ts-jest": "29.4.1",
    "typescript": "~5.9.2",
    "vitest": "3.2.4"
  },
  "keywords": [
    "o4o",
    "platform",
    "monorepo",
    "typescript",
    "react",
    "node"
  ],
  "author": "O4O Platform Team",
  "license": "MIT",
  "dependencies": {
    "@radix-ui/react-alert-dialog": "1.1.14",
    "@radix-ui/react-avatar": "1.1.10",
    "@radix-ui/react-toast": "1.2.14",
    "@tailwindcss/postcss": "^4.0.0-beta.8",
    "@types/bcrypt": "6.0.0",
    "@types/jsonwebtoken": "9.0.10",
    "@types/nodemailer": "6.4.17",
    "bcrypt": "6.0.0",
    "jsonwebtoken": "9.0.2",
    "nodemailer": "7.0.5",
    "rate-limit-redis": "^4.2.1",
    "react": "19.1.1",
    "react-dom": "19.1.1",
    "slugify": "^1.6.6"
  }
}
