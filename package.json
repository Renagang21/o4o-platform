{
  "name": "o4o-platform",
  "version": "1.0.0",
  "description": "O4O Platform - Clean Monorepo Architecture",
  "type": "module",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*",
    "!apps/*.backup",
    "!packages/*.backup"
  ],
  "engines": {
    "node": ">=22.18.0",
    "npm": ">=10.9.3"
  },
  "overrides": {
    "react": "18.3.1",
    "react-dom": "18.3.1",
    "@types/react": "18.3.12",
    "@types/react-dom": "18.3.1"
  },
  "scripts": {
    "// === 개발 스크립트 ===": "",
    "dev": "concurrently \"npm run dev:web\" \"npm run dev:admin\"",
    "dev:web": "npm run dev --workspace=@o4o/main-site",
    "dev:admin": "npm run dev --workspace=@o4o/admin-dashboard",
    "dev:api": "cd apps/api-server && npm run dev",
    "start:api": "cd apps/api-server && npm run start",
    
    "// === 빌드 스크립트 ===": "",
    "build": "NODE_OPTIONS='--max-old-space-size=8192' npm run build:packages && NODE_OPTIONS='--max-old-space-size=8192' npm run build:apps",
    "build:packages": "npm run build:types && npm run build:utils && npm run build:ui && npm run build:auth-client && npm run build:auth-context && npm run build:shortcodes",
    "build:apps": "npm run build:main-site && npm run build:admin && npm run build:api",
    "build:api": "cd apps/api-server && npm run build",
    "build:main-site": "npm run build --workspace=@o4o/main-site",
    "build:admin": "npm run build --workspace=@o4o/admin-dashboard",
    "build:types": "npm run build --workspace=@o4o/types",
    "build:utils": "npm run build --workspace=@o4o/utils",
    "build:ui": "npm run build --workspace=@o4o/ui",
    "build:auth-client": "npm run build --workspace=@o4o/auth-client",
    "build:auth-context": "npm run build --workspace=@o4o/auth-context",
    "build:shortcodes": "npm run build --workspace=@o4o/shortcodes",
    
    "// === 테스트 & 린트 ===": "",
    "type-check": "./scripts/dev.sh type-check",
    "lint": "./scripts/dev.sh lint",
    "lint:fix": "./scripts/dev.sh lint:fix",
    "test": "./scripts/dev.sh test",
    
    "// === 정리 스크립트 ===": "",
    "clean": "rm -rf node_modules apps/*/node_modules packages/*/node_modules apps/*/dist packages/*/dist",
    "clean:dist": "rm -rf apps/*/dist packages/*/dist",
    "install:all": "npm install && npm run build",
    
    "// === PM2 관리 ===": "",
    "pm2:start:local": "pm2 start ecosystem.config.local.cjs",
    "pm2:stop:local": "pm2 stop ecosystem.config.local.cjs",
    "pm2:restart:local": "pm2 restart ecosystem.config.local.cjs",
    "pm2:start:webserver": "pm2 start ecosystem.config.webserver.cjs",
    "pm2:stop:webserver": "pm2 stop ecosystem.config.webserver.cjs",
    "pm2:restart:webserver": "pm2 restart ecosystem.config.webserver.cjs",
    "pm2:start:apiserver": "pm2 start ecosystem.config.apiserver.cjs",
    "pm2:stop:apiserver": "pm2 stop ecosystem.config.apiserver.cjs",
    "pm2:restart:apiserver": "pm2 restart ecosystem.config.apiserver.cjs"
  },
  "devDependencies": {
    "@eslint/js": "9.33.0",
    "@testing-library/react": "16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/axios": "0.9.36",
    "@types/jest": "29.5.14",
    "@types/node-cron": "3.0.11",
    "@types/react": "18.3.12",
    "@types/react-dom": "18.3.1",
    "@types/socket.io-client": "1.4.36",
    "@typescript-eslint/eslint-plugin": "8.39.0",
    "@typescript-eslint/parser": "8.39.0",
    "@vitejs/plugin-react": "^4.7.0",
    "@vitest/ui": "3.2.4",
    "autoprefixer": "^10.4.20",
    "concurrently": "^7.6.0",
    "eslint": "^9.31.0",
    "eslint-plugin-react": "7.37.5",
    "eslint-plugin-react-hooks": "5.2.0",
    "jest": "29.7.0",
    "postcss": "^8.4.49",
    "prettier": "^3.0.0",
    "tailwindcss": "^4.1.0",
    "ts-jest": "29.4.1",
    "typescript": "~5.9.2",
    "vite": "^5.4.0",
    "vitest": "3.2.4"
  },
  "keywords": [
    "o4o",
    "platform",
    "monorepo",
    "typescript",
    "react",
    "node"
  ],
  "author": "O4O Platform Team",
  "license": "MIT",
  "dependencies": {
    "@mui/icons-material": "7.3.1",
    "@mui/material": "7.3.1",
    "@radix-ui/react-alert-dialog": "1.1.14",
    "@radix-ui/react-avatar": "1.1.10",
    "@radix-ui/react-toast": "1.2.14",
    "@tailwindcss/postcss": "^4.0.0-beta.8",
    "@tosspayments/payment-sdk": "1.9.1",
    "@types/bcrypt": "6.0.0",
    "@types/cron": "2.0.1",
    "@types/jsonwebtoken": "9.0.10",
    "@types/nodemailer": "6.4.17",
    "adm-zip": "0.5.16",
    "bcrypt": "6.0.0",
    "class-validator": "0.14.2",
    "cron": "4.3.3",
    "exceljs": "4.4.0",
    "express-validator": "7.2.1",
    "jsonwebtoken": "9.0.2",
    "node-cache": "5.1.2",
    "nodemailer": "7.0.5",
    "rate-limit-redis": "^4.2.1",
    "react": "18.3.1",
    "react-dom": "18.3.1",
    "slugify": "^1.6.6",
    "swagger-jsdoc": "6.2.8",
    "swagger-ui-express": "5.0.1",
    "xml2js": "0.6.2"
  },
  "volta": {
    "node": "22.18.0",
    "npm": "10.9.3"
  }
}
