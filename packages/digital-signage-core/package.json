{
  "name": "@o4o-apps/digital-signage-core",
  "version": "0.1.0",
  "description": "Digital Signage Core - Media, Display, Schedule, Action management",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./manifest": {
      "import": "./dist/backend/manifest.js",
      "types": "./dist/backend/manifest.d.ts"
    },
    "./entities": {
      "import": "./dist/backend/entities/index.js",
      "types": "./dist/backend/entities/index.d.ts"
    }
  },
  "scripts": {
    "build": "tsc",
    "clean": "rm -rf dist",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "express": "^4.18.2",
    "typeorm": "^0.3.20"
  },
  "peerDependencies": {
    "reflect-metadata": "^0.2.0"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/node": "^20.10.0",
    "typescript": "^5.3.0"
  }
}
