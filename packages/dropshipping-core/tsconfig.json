{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "rootDir": "./src",
    "outDir": "./dist",
    "composite": true,
    "declaration": true,
    "declarationMap": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "skipLibCheck": true,
    "noEmit": false,
    "emitDeclarationOnly": false,
    "strict": false,
    "noImplicitAny": false,
    "strictNullChecks": false,
    "strictPropertyInitialization": false
  },
  "include": [
    "src/manifest.ts",
    "src/index.ts",
    "src/lifecycle/**/*"
  ],
  "exclude": [
    "src/admin-ui/**/*",
    "src/main-site/**/*",
    "src/backend/acf/**/*",
    "src/backend/cpt/**/*",
    "src/backend/services/**/*",
    "dist",
    "node_modules",
    "**/*.test.ts",
    "**/*.spec.ts"
  ]
}
