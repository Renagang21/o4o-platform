{
  "extends": "../../tsconfig.packages.json",
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["DOM", "DOM.Iterable", "ES2022"],
    "jsx": "react-jsx",
    "outDir": "./dist",
    "rootDir": "./src",
    "composite": true,
    "declaration": true,
    "declarationMap": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "types": []
  },
  "include": ["src/**/*"],
  "exclude": [
    "src/hooks/useUniversalBlock.ts",
    "src/template/**/*"
  ],
  "references": [
    { "path": "../types" },
    { "path": "../utils" },
    { "path": "../auth-client" }
  ]
}