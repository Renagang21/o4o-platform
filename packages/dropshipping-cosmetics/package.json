{
  "name": "@o4o/dropshipping-cosmetics",
  "version": "1.0.0",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./src/index.ts",
      "types": "./src/index.ts"
    },
    "./admin-ui": {
      "import": "./src/admin-ui/index.ts",
      "types": "./src/admin-ui/index.ts"
    },
    "./main-site": {
      "import": "./src/main-site/index.ts",
      "types": "./src/main-site/index.ts"
    },
    "./backend": {
      "import": "./src/backend/index.ts",
      "types": "./src/backend/index.ts"
    }
  },
  "files": ["dist", "src"],
  "scripts": {
    "build": "echo 'Skipping TypeScript build - will be bundled by Vite or consumed by API server' && mkdir -p dist && echo 'export {};' > dist/index.js",
    "clean": "rimraf dist",
    "typecheck": "tsc --noEmit",
    "lint": "eslint .",
    "test": "vitest"
  },
  "dependencies": {
    "@o4o/types": "workspace:*",
    "@o4o/dropshipping-core": "workspace:*",
    "typeorm": "^0.3.0",
    "reflect-metadata": "^0.1.13"
  },
  "peerDependencies": {
    "react": "^18.0.0 || ^19.0.0",
    "react-router-dom": "^6.0.0"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@types/react": "^18.0.0",
    "typescript": "^5.3.0",
    "rimraf": "^5.0.0",
    "eslint": "^8.0.0",
    "vitest": "^1.0.0"
  }
}
