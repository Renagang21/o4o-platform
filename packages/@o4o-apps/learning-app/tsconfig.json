{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "lib": ["ES2022", "DOM", "DOM.Iterable"],
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "outDir": "./dist",
    "rootDir": ".",
    "jsx": "react-jsx",
    "resolveJsonModule": true
  },
  "include": [
    "*.ts",
    "types/**/*.ts",
    "lifecycle/**/*.ts",
    "functions/**/*.ts",
    "ui/**/*.tsx"
  ],
  "exclude": ["node_modules", "dist"]
}
