{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "rootDir": "./src",
    "outDir": "./dist",
    "composite": true,
    "noEmit": false,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "strictPropertyInitialization": false,
    "skipLibCheck": true,
    "strict": false,
    "noImplicitAny": false,
    "strictNullChecks": false,
    "baseUrl": ".",
    "paths": {
      "@/*": ["../../apps/admin-dashboard/src/*", "../../apps/main-site/src/*"]
    }
  },
  "include": [
    "src/manifest.ts",
    "src/index.ts",
    "src/types/**/*"
  ],
  "exclude": [
    "src/entities/**/*",
    "src/services/**/*",
    "src/controllers/**/*",
    "src/guards/**/*",
    "src/utils/**/*",
    "src/lifecycle/**/*",
    "dist",
    "node_modules",
    "**/*.test.ts",
    "**/*.spec.ts"
  ]
}
