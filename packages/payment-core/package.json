{
  "name": "@o4o/payment-core",
  "version": "0.2.0",
  "private": true,
  "description": "Payment Core - Platform-level payment state machine and event contracts",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "type": "module",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./types": {
      "import": "./dist/types/index.js",
      "types": "./dist/types/index.d.ts"
    },
    "./entities": {
