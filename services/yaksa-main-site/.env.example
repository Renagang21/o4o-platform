
# yaksa-main-site 환경 설정 예시

# ✅ API 설정
VITE_API_BASE_URL=https://api.yaksa.site
VITE_API_TIMEOUT=30000

# ✅ 사이트 기본 정보
VITE_SITE_NAME=yaksa.site
VITE_SITE_DESCRIPTION=야크사 - 야크사들의 커뮤니티
VITE_SITE_URL=https://yaksa.site

# ✅ 인증 관련 키
VITE_AUTH_TOKEN_KEY=yaksa_auth_token
VITE_AUTH_REFRESH_TOKEN_KEY=yaksa_refresh_token

# ✅ 기능 플래그 (기본값 기준)
VITE_ENABLE_DARK_MODE=true
VITE_ENABLE_ANALYTICS=false

# ✅ 외부 서비스 연동 (빈 값은 필요 시 설정)
VITE_GOOGLE_ANALYTICS_ID=
VITE_SENTRY_DSN=

# ✅ 개발 서버 설정
VITE_DEV_SERVER_PORT=3000
VITE_DEV_SERVER_HOST=localhost
