{
  "type": "footer",
  "layout": "multi-column",
  "components": [
    {
      "type": "FooterColumn",
      "props": {
        "title": "About",
        "links": [
          {"label": "About Us", "href": "/about"},
          {"label": "Contact", "href": "/contact"},
          {"label": "Terms", "href": "/terms"},
          {"label": "Privacy", "href": "/privacy"}
        ]
      }
    },
    {
      "type": "FooterColumn",
      "props": {
        "title": "Shop",
        "links": [
          {"label": "All Products", "href": "/shop"},
          {"label": "New Arrivals", "href": "/shop?filter=new"},
          {"label": "Best Sellers", "href": "/shop?filter=popular"},
          {"label": "Sale", "href": "/shop?filter=sale"}
        ]
      }
    },
    {
      "type": "FooterColumn",
      "props": {
        "title": "Customer Service",
        "links": [
          {"label": "Help Center", "href": "/help"},
          {"label": "Shipping Info", "href": "/shipping"},
          {"label": "Returns", "href": "/returns"},
          {"label": "FAQ", "href": "/faq"}
        ]
      }
    },
    {
      "type": "FooterColumn",
      "props": {
        "title": "Connect",
        "social": [
          {"platform": "facebook", "url": "{{social.facebook}}"},
          {"platform": "instagram", "url": "{{social.instagram}}"},
          {"platform": "twitter", "url": "{{social.twitter}}"}
        ]
      }
    }
  ],
  "bottom": {
    "copyright": "Â© {{year}} {{siteName}}. All rights reserved.",
    "links": [
      {"label": "Terms", "href": "/terms"},
      {"label": "Privacy", "href": "/privacy"}
    ]
  },
  "style": {
    "background": "{{theme.colors.footerBg}}",
    "textColor": "{{theme.colors.footerText}}"
  }
}
