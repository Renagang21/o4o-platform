{
  "viewId": "login",
  "title": "Login",
  "url": "/login",
  "layout": {
    "type": "MinimalLayout",
    "showHeader": false,
    "showFooter": false
  },
  "components": [
    {
      "type": "LoginForm",
      "props": {
        "title": "Sign in to {{siteName}}",
        "redirectAfterLogin": "/dashboard",
        "showSocialLogin": true,
        "socialProviders": ["google", "facebook"],
        "showRegisterLink": true,
        "registerUrl": "/signup"
      }
    }
  ],
  "meta": {
    "description": "Login to your account",
    "robots": "noindex, nofollow"
  }
}
