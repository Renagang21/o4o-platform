{
  "name": "o4o-platform-api-server",
  "version": "1.0.0",
  "description": "O4O Platform API Server",
  "main": "dist/main.js",
  "engines": {
    "node": ">=20.0.0 <21.0.0",
    "npm": ">=9.0.0"
  },
  "scripts": {
    "start": "node dist/main.js",
    "dev": "nodemon --exec ts-node src/main.ts",
    "build": "tsc",
    "test": "jest",
    "test:unit": "jest --testPathPattern=unit",
    "test:integration": "jest --testPathPattern=integration",
    "test:coverage": "jest --coverage",
    "type-check": "tsc --noEmit",
    "lint": "eslint src",
    "lint:fix": "eslint src --fix",
    "prettier": "prettier --check src/**/*.{ts,tsx,js,jsx,json}",
    "prettier:fix": "prettier --write src/**/*.{ts,tsx,js,jsx,json}",
    "create-admin": "npx ts-node ../../scripts/create-admin.ts",
    "db:test": "node ../../scripts/test-database.js",
    "db:setup": "docker-compose -f ../../docker-compose.dev.yml up -d postgres redis",
    "db:stop": "docker-compose -f ../../docker-compose.dev.yml stop postgres redis",
    "db:reset": "docker-compose -f ../../docker-compose.dev.yml down -v && docker-compose -f ../../docker-compose.dev.yml up -d postgres redis",
    "db:logs": "docker logs o4o-postgres-dev",
    "dev:full": "npm run db:setup && sleep 5 && npm run db:test && npm run dev",
    "migration:generate": "npx typeorm-ts-node-commonjs migration:generate -d src/database/connection.ts",
    "migration:run": "npx typeorm-ts-node-commonjs migration:run -d src/database/connection.ts",
    "migration:revert": "npx typeorm-ts-node-commonjs migration:revert -d src/database/connection.ts"
  },
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "dotenv": "^16.0.3",
    "helmet": "^6.0.1",
    "bcryptjs": "^2.4.3",
    "jsonwebtoken": "^9.0.0",
    "typeorm": "^0.3.20",
    "pg": "^8.11.3",
    "reflect-metadata": "^0.1.13",
    "express-rate-limit": "^6.7.0",
    "express-validator": "^6.15.0",
    "winston": "^3.8.2",
    "socket.io": "^4.6.1"
  },
  "devDependencies": {
    "@types/express": "^4.17.17",
    "@types/cors": "^2.8.13",
    "@types/bcryptjs": "^2.4.2",
    "@types/jsonwebtoken": "^9.0.1",
    "@types/node": "^20.18.0",
    "@types/pg": "^8.10.9",
    "typescript": "^5.8.3",
    "ts-node": "^10.9.1",
    "nodemon": "^3.1.7",
    "jest": "^29.5.0",
    "@types/jest": "^29.5.1",
    "ts-jest": "^29.1.0",
    "eslint": "^9.25.0",
    "@typescript-eslint/parser": "^8.18.0",
    "@typescript-eslint/eslint-plugin": "^8.18.0",
    "prettier": "^3.0.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.2.1"
  }
}
