{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "strict": false,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noFallthroughCasesInSwitch": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@/components/*": ["./src/components/*"],
      "@/pages/*": ["./src/pages/*"],
      "@/hooks/*": ["./src/hooks/*"],
      "@/utils/*": ["./src/utils/*"],
      "@/types/*": ["./src/types/*"],
      "@/api/*": ["./src/api/*"],
      "@/styles/*": ["./src/styles/*"],
      "@shared/*": ["../../shared/*"],
      "@shared/components/admin/*": ["../../shared/components/admin/*"],
      "@shared/components/editor/*": ["../../shared/components/editor/*"],
      "@shared/components/theme/*": ["../../shared/components/theme/*"],
      "@shared/components/ui/*": ["../../shared/components/ui/*"],
      "@shared/components/dropshipping/*": ["../../shared/components/dropshipping/*"],
      "@shared/components/healthcare/*": ["../../shared/components/healthcare/*"]
    }
  },
  "include": ["src", "vite-env.d.ts"],
  "references": [{ "path": "./tsconfig.node.json" }]
}