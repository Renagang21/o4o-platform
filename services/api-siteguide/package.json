{
  "name": "@o4o/api-siteguide",
  "version": "1.0.0",
  "description": "SiteGuide Core API Service - siteguide.co.kr",
  "main": "dist/main.js",
  "type": "module",
  "engines": {
    "node": ">=22.18.0",
    "pnpm": ">=9.0.0"
  },
  "scripts": {
    "build": "pnpm run clean:dist && tsc -p tsconfig.build.json",
    "build:prod": "cross-env NODE_ENV=production pnpm run build",
    "clean:dist": "rimraf dist",
    "dev": "cross-env NODE_ENV=development nodemon --watch src -e ts,js,json --exec \"pnpm run build && node dist/main.js || echo 'Build failed'\"",
    "start": "node dist/main.js",
    "start:prod": "cross-env NODE_ENV=production node dist/main.js",
    "lint": "eslint \"src/**/*.ts\" --fix",
    "type-check": "tsc --noEmit"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^16.6.1",
    "express": "^4.21.2",
    "helmet": "^6.2.0",
    "pg": "^8.16.3",
    "reflect-metadata": "0.1.14",
    "typeorm": "^0.3.26",
    "uuid": "9.0.1"
  },
  "devDependencies": {
    "@types/cors": "2.8.19",
    "@types/express": "4.17.23",
    "@types/node": "22.17.2",
    "@types/uuid": "^10.0.0",
    "cross-env": "^7.0.3",
    "nodemon": "3.1.10",
    "rimraf": "^5.0.0",
    "typescript": "5.4.5"
  }
}
