{
  "$schema": "../../schemas/layout-preset.schema.json",
  "templateId": "professional-service",
  "version": "1.0.0",

  "pages": {
    "home": {
      "title": "Home",
      "path": "/",
      "sections": [
        {
          "id": "hero",
          "type": "hero-professional",
          "enabled": true,
          "config": {
            "layout": "split",
            "height": "medium",
            "showCredentials": true,
            "showCertifications": true,
            "ctaText": "Get Expert Advice",
            "ctaLink": "/consultation"
          }
        },
        {
          "id": "trust-bar",
          "type": "trust-badges",
          "enabled": true,
          "config": {
            "layout": "horizontal",
            "showCertifications": true,
            "items": [
              { "icon": "certified", "text": "Licensed Professional" },
              { "icon": "years", "text": "20+ Years Experience" },
              { "icon": "customers", "text": "10,000+ Customers" },
              { "icon": "guarantee", "text": "Quality Guaranteed" }
            ]
          }
        },
        {
          "id": "expert-picks",
          "type": "product-curated",
          "enabled": true,
          "config": {
            "title": "Expert Recommendations",
            "subtitle": "Carefully selected by our professionals",
            "columns": 3,
            "maxItems": 6,
            "showExpertNote": true,
            "showReason": true
          }
        },
        {
          "id": "categories",
          "type": "category-cards",
          "enabled": true,
          "config": {
            "title": "Browse by Category",
            "columns": 4,
            "maxItems": 8,
            "showDescription": true,
            "showProductCount": true
          }
        },
        {
          "id": "usage-guide",
          "type": "content-cards",
          "enabled": true,
          "config": {
            "title": "Usage Guides",
            "subtitle": "Learn how to use our products safely",
            "columns": 3,
            "showIcon": true,
            "items": [
              { "title": "Proper Usage", "icon": "guide" },
              { "title": "Dosage Information", "icon": "dosage" },
              { "title": "Safety Tips", "icon": "safety" }
            ]
          }
        },
        {
          "id": "faq-preview",
          "type": "faq-accordion",
          "enabled": true,
          "config": {
            "title": "Frequently Asked Questions",
            "maxItems": 5,
            "showViewAll": true
          }
        },
        {
          "id": "consultation-cta",
          "type": "cta-banner",
          "enabled": true,
          "config": {
            "title": "Need Expert Advice?",
            "subtitle": "Our professionals are here to help",
            "ctaText": "Contact Us",
            "ctaLink": "/contact",
            "backgroundColor": "primary"
          }
        }
      ]
    },

    "productList": {
      "title": "Products",
      "path": "/products",
      "sections": [
        {
          "id": "product-header",
          "type": "page-header",
          "enabled": true,
          "config": {
            "showBreadcrumb": true,
            "showTitle": true,
            "showDescription": true
          }
        },
        {
          "id": "safety-notice",
          "type": "alert-banner",
          "enabled": true,
          "config": {
            "type": "info",
            "message": "Please consult a professional before purchasing if you have any health concerns.",
            "dismissible": false
          }
        },
        {
          "id": "product-filter",
          "type": "filter-sidebar",
          "enabled": true,
          "config": {
            "position": "left",
            "showCategory": true,
            "showBrand": true,
            "showIngredients": true,
            "collapsible": true
          }
        },
        {
          "id": "product-grid",
          "type": "product-grid",
          "enabled": true,
          "config": {
            "columns": 3,
            "pagination": true,
            "itemsPerPage": 15,
            "showSort": true,
            "showDetailedInfo": true
          }
        }
      ]
    },

    "productDetail": {
      "title": "Product Detail",
      "path": "/products/:id",
      "sections": [
        {
          "id": "product-main",
          "type": "product-detail-professional",
          "enabled": true,
          "config": {
            "imagePosition": "left",
            "showIngredients": true,
            "showUsageGuide": true,
            "showWarnings": true,
            "showCertifications": true
          }
        },
        {
          "id": "warning-box",
          "type": "alert-box",
          "enabled": true,
          "config": {
            "type": "warning",
            "title": "Important Notice",
            "showAlways": true
          }
        },
        {
          "id": "product-tabs",
          "type": "tabs",
          "enabled": true,
          "config": {
            "tabs": [
              "description",
              "ingredients",
              "usage",
              "precautions",
              "reviews"
            ]
          }
        },
        {
          "id": "related-products",
          "type": "product-carousel",
          "enabled": true,
          "config": {
            "title": "Related Products",
            "itemsPerView": 4,
            "filter": "related"
          }
        }
      ]
    },

    "consultation": {
      "title": "Consultation",
      "path": "/consultation",
      "sections": [
        {
          "id": "consultation-header",
          "type": "page-header",
          "enabled": true,
          "config": {
            "title": "Professional Consultation",
            "subtitle": "Get personalized advice from our experts"
          }
        },
        {
          "id": "consultation-form",
          "type": "contact-form",
          "enabled": true,
          "config": {
            "fields": [
              "name",
              "email",
              "phone",
              "inquiryType",
              "message"
            ],
            "disclaimer": true
          }
        }
      ]
    }
  },

  "layout": {
    "header": {
      "type": "professional",
      "sticky": true,
      "showLogo": true,
      "showSearch": true,
      "showCart": true,
      "showUser": true,
      "showCredentials": true,
      "navPosition": "left"
    },
    "footer": {
      "type": "multi-column",
      "columns": 4,
      "showCertifications": true,
      "showDisclaimer": true,
      "showContactInfo": true
    }
  }
}
