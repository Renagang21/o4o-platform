{
  "$schema": "../../schemas/theme-config.schema.json",
  "templateId": "professional-service",
  "templateName": "Professional Service Store",
  "version": "1.0.0",

  "colors": {
    "primary": "#0F766E",
    "primaryHover": "#0D9488",
    "secondary": "#475569",
    "accent": "#0EA5E9",
    "background": "#FFFFFF",
    "backgroundAlt": "#F0FDFA",
    "surface": "#FFFFFF",
    "text": "#0F172A",
    "textMuted": "#475569",
    "border": "#CBD5E1",
    "success": "#059669",
    "warning": "#D97706",
    "error": "#DC2626",
    "trust": "#1E40AF",
    "info": "#0284C7"
  },

  "typography": {
    "fontFamily": {
      "heading": "'Noto Sans KR', -apple-system, BlinkMacSystemFont, sans-serif",
      "body": "'Noto Sans KR', -apple-system, BlinkMacSystemFont, sans-serif",
      "mono": "'JetBrains Mono', monospace"
    },
    "fontSize": {
      "xs": "0.75rem",
      "sm": "0.875rem",
      "base": "1rem",
      "lg": "1.125rem",
      "xl": "1.25rem",
      "2xl": "1.5rem",
      "3xl": "1.875rem",
      "4xl": "2.25rem"
    },
    "fontWeight": {
      "normal": 400,
      "medium": 500,
      "semibold": 600,
      "bold": 700
    },
    "lineHeight": {
      "tight": 1.25,
      "normal": 1.5,
      "relaxed": 1.75
    }
  },

  "spacing": {
    "containerMaxWidth": "1200px",
    "sectionPadding": "3rem",
    "cardPadding": "1.5rem",
    "gridGap": "1.5rem"
  },

  "borderRadius": {
    "sm": "0.25rem",
    "md": "0.375rem",
    "lg": "0.5rem",
    "xl": "0.75rem",
    "full": "9999px"
  },

  "shadows": {
    "sm": "0 1px 2px 0 rgb(0 0 0 / 0.05)",
    "md": "0 4px 6px -1px rgb(0 0 0 / 0.07)",
    "lg": "0 10px 15px -3px rgb(0 0 0 / 0.08)",
    "xl": "0 20px 25px -5px rgb(0 0 0 / 0.1)"
  },

  "components": {
    "button": {
      "borderRadius": "md",
      "paddingX": "1.5rem",
      "paddingY": "0.75rem",
      "fontSize": "base",
      "fontWeight": "medium"
    },
    "card": {
      "borderRadius": "lg",
      "shadow": "sm",
      "hoverShadow": "md",
      "padding": "1.5rem",
      "border": true
    },
    "input": {
      "borderRadius": "md",
      "borderColor": "border",
      "focusBorderColor": "primary",
      "paddingX": "1rem",
      "paddingY": "0.75rem"
    },
    "badge": {
      "borderRadius": "full",
      "paddingX": "0.75rem",
      "paddingY": "0.25rem",
      "fontSize": "xs",
      "fontWeight": "semibold"
    },
    "alert": {
      "borderRadius": "md",
      "padding": "1rem",
      "showIcon": true
    }
  },

  "specialElements": {
    "trustBadge": {
      "backgroundColor": "trust",
      "textColor": "white",
      "iconSize": "1.25rem"
    },
    "warningBox": {
      "backgroundColor": "#FEF3C7",
      "borderColor": "#F59E0B",
      "textColor": "#92400E"
    },
    "infoBox": {
      "backgroundColor": "#E0F2FE",
      "borderColor": "#0284C7",
      "textColor": "#075985"
    }
  }
}
