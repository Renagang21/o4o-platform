{
  "type": "header",
  "layout": "horizontal",
  "sticky": true,
  "components": [
    {
      "type": "Logo",
      "props": {
        "src": "{{logoUrl}}",
        "alt": "{{siteName}}",
        "link": "/"
      }
    },
    {
      "type": "Navigation",
      "props": {
        "items": [
          {"label": "Home", "href": "/"},
          {"label": "Shop", "href": "/shop"},
          {"label": "About", "href": "/about"},
          {"label": "Contact", "href": "/contact"}
        ],
        "style": "horizontal"
      }
    },
    {
      "type": "UserMenu",
      "props": {
        "showCart": true,
        "showWishlist": true,
        "showNotifications": false,
        "loginUrl": "/login",
        "dashboardUrl": "/dashboard"
      }
    }
  ],
  "style": {
    "background": "{{theme.colors.headerBg}}",
    "textColor": "{{theme.colors.headerText}}"
  }
}
