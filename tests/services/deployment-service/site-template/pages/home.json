{
  "viewId": "home",
  "title": "Home",
  "url": "/",
  "layout": {
    "type": "DefaultLayout",
    "showHeader": true,
    "showFooter": true
  },
  "components": [
    {
      "type": "HeroBanner",
      "props": {
        "title": "Welcome to {{siteName}}",
        "subtitle": "Your platform is ready",
        "backgroundImage": "/media/hero-bg.jpg",
        "cta": {
          "text": "Get Started",
          "link": "/shop"
        }
      }
    },
    {
      "type": "FeaturedProducts",
      "props": {
        "title": "Featured Products",
        "limit": 8,
        "category": null
      }
    },
    {
      "type": "ContentBlock",
      "props": {
        "title": "About Us",
        "content": "{{siteDescription}}",
        "alignment": "center"
      }
    }
  ],
  "meta": {
    "description": "{{siteName}} - Your trusted platform",
    "keywords": "ecommerce, shop, products"
  }
}
