{
  "viewId": "dashboard",
  "title": "Dashboard",
  "url": "/dashboard",
  "requiresAuth": true,
  "layout": {
    "type": "DashboardLayout",
    "showHeader": true,
    "showFooter": false,
    "showSidebar": true
  },
  "components": [
    {
      "type": "DashboardHeader",
      "props": {
        "greeting": "Welcome back, {{userName}}"
      }
    },
    {
      "type": "StatsGrid",
      "props": {
        "stats": [
          {"label": "Total Orders", "value": "{{userOrders}}"},
          {"label": "Pending", "value": "{{pendingOrders}}"},
          {"label": "Points", "value": "{{userPoints}}"}
        ]
      }
    },
    {
      "type": "RecentOrders",
      "props": {
        "limit": 5,
        "showViewAll": true
      }
    }
  ],
  "meta": {
    "description": "User dashboard",
    "robots": "noindex, nofollow"
  }
}
