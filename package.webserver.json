{
  "name": "o4o-platform",
  "version": "1.0.0",
  "description": "O4O Platform - Web Server Configuration",
  "type": "module",
  "private": true,
  "workspaces": [
    "apps/admin-dashboard",
    "apps/main-site",
    "apps/storefront",
    "apps/ecommerce",
    "apps/crowdfunding",
    "apps/forum",
    "apps/digital-signage",
    "packages/*",
    "!packages/*.backup"
  ],
  "engines": {
    "node": ">=22.18.0",
    "npm": ">=10.9.3"
  },
  "overrides": {
    "react": "18.3.1",
    "react-dom": "18.3.1",
    "@types/react": "18.3.12",
    "@types/react-dom": "18.3.1"
  },
  "scripts": {
    "dev": "concurrently \"npm run dev:web\" \"npm run dev:admin\"",
    "dev:web": "npm run dev --workspace=@o4o/main-site",
    "dev:admin": "npm run dev --workspace=@o4o/admin-dashboard",
    "dev:ecommerce": "npm run dev --workspace=@o4o/ecommerce",
    "dev:crowdfunding": "npm run dev --workspace=@o4o/crowdfunding",
    "dev:signage": "npm run dev --workspace=@o4o/digital-signage",
    "build": "npm run build:packages && npm run build:apps",
    "build:packages": "npm run build:types && npm run build:utils && npm run build:ui && npm run build:auth-client && npm run build:auth-context && npm run build:crowdfunding-types && npm run build:forum-types && npm run build:shortcodes && npm run build:supplier-connector",
    "build:types": "npm run build --workspace=@o4o/types",
    "build:utils": "npm run build --workspace=@o4o/utils",
    "build:ui": "npm run build --workspace=@o4o/ui",
    "build:auth-client": "npm run build --workspace=@o4o/auth-client",
    "build:auth-context": "npm run build --workspace=@o4o/auth-context",
    "build:crowdfunding-types": "npm run build --workspace=@o4o/crowdfunding-types",
    "build:forum-types": "npm run build --workspace=@o4o/forum-types",
    "build:shortcodes": "npm run build --workspace=@o4o/shortcodes",
    "build:supplier-connector": "npm run build --workspace=@o4o/supplier-connector",
    "build:apps": "npm run build:main-site && npm run build:admin && npm run build:ecommerce && npm run build:crowdfunding && npm run build:forum && npm run build:signage",
    "build:main-site": "npm run build --workspace=@o4o/main-site",
    "build:admin": "npm run build --workspace=@o4o/admin-dashboard",
    "build:ecommerce": "npm run build --workspace=@o4o/ecommerce",
    "build:crowdfunding": "npm run build --workspace=@o4o/crowdfunding",
    "build:forum": "npm run build --workspace=@o4o/forum",
    "build:signage": "npm run build --workspace=@o4o/digital-signage",
    "type-check": "./scripts/dev.sh type-check",
    "lint": "./scripts/dev.sh lint",
    "lint:fix": "./scripts/dev.sh lint:fix",
    "pm2:start": "pm2 start ecosystem.config.webserver.cjs",
    "pm2:stop": "pm2 stop ecosystem.config.webserver.cjs",
    "pm2:restart": "pm2 restart ecosystem.config.webserver.cjs"
  },
  "dependencies": {
    "@mui/icons-material": "7.3.1",
    "@mui/material": "7.3.1",
    "@radix-ui/react-alert-dialog": "1.1.14",
    "@radix-ui/react-avatar": "1.1.10",
    "@radix-ui/react-toast": "1.2.14",
    "@tailwindcss/postcss": "^4.0.0-beta.8",
    "@tosspayments/payment-sdk": "1.9.1",
    "react": "18.3.1",
    "react-dom": "18.3.1"
  },
  "devDependencies": {
    "@eslint/js": "9.33.0",
    "@testing-library/react": "16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/react": "18.3.12",
    "@types/react-dom": "18.3.1",
    "@typescript-eslint/eslint-plugin": "8.39.0",
    "@typescript-eslint/parser": "8.39.0",
    "@vitejs/plugin-react": "^4.7.0",
    "@vitest/ui": "3.2.4",
    "autoprefixer": "^10.4.20",
    "concurrently": "^7.6.0",
    "eslint": "^9.31.0",
    "eslint-plugin-react": "7.37.5",
    "eslint-plugin-react-hooks": "5.2.0",
    "postcss": "^8.4.49",
    "prettier": "^3.0.0",
    "tailwindcss": "^4.1.0",
    "typescript": "~5.9.2",
    "vite": "^5.4.0",
    "vitest": "3.2.4"
  }
}