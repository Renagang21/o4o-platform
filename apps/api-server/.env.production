# Production Environment Variables
# API Server - admin.neture.co.kr

# Server Configuration
NODE_ENV=production
PORT=4000

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_USERNAME=postgres
DB_PASSWORD=your_secure_password_here
DB_NAME=o4o_platform

# JWT Configuration
JWT_SECRET=your_jwt_secret_here_minimum_32_characters
REFRESH_SECRET=your_refresh_secret_here_minimum_32_characters
JWT_ACCESS_EXPIRY=15m
JWT_REFRESH_EXPIRY=7d

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379

# CORS Configuration
FRONTEND_URL=https://admin.neture.co.kr
ALLOWED_ORIGINS=https://neture.co.kr,https://www.neture.co.kr,https://admin.neture.co.kr,https://shop.neture.co.kr,https://forum.neture.co.kr,https://signage.neture.co.kr,https://funding.neture.co.kr,https://auth.neture.co.kr

# AWS S3 Configuration (Optional)
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=ap-northeast-2
S3_BUCKET_NAME=o4o-platform-media

# Email Configuration (Optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password

# Upload Configuration
UPLOAD_DIR=/home/sohae21/Coding/o4o-platform/uploads
MAX_FILE_SIZE=10485760

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=info
LOG_DIR=/home/sohae21/Coding/o4o-platform/logs

# Session Configuration
SESSION_SECRET=your_session_secret_here