  "auth": {
    "type": "bearer",
    "bearer": [
      {
        "key": "token",
        "value": "{{accessToken}}",
        "type": "string"
      }
    ]
  },
  "variable": [
    {
      "key": "baseUrl",
      "value": "https://api.neture.co.kr/api/v1/authentication",
      "type": "string"
    },
    {
      "key": "accessToken",
      "value": "",
