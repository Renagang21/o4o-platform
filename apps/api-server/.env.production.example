# Production Environment Variables for API Server
# Copy this file to .env.production and update with actual values

# Node Environment
NODE_ENV=production
PORT=3000
SERVER_TYPE=apiserver

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_USERNAME=your_db_user
DB_PASSWORD=your_secure_password_here
DB_NAME=o4o_production

# Alternative: Use DATABASE_URL for connection string
# DATABASE_URL=postgresql://user:password@localhost:5432/o4o_production

# JWT Configuration
JWT_SECRET=your_very_secure_jwt_secret_at_least_32_characters_long
JWT_REFRESH_SECRET=another_very_secure_refresh_secret_at_least_32_characters_long
JWT_EXPIRY=15m
JWT_REFRESH_EXPIRY=7d

# Session Configuration
SESSION_SECRET=your_secure_session_secret_at_least_32_characters_long

# Redis Configuration (for sessions and caching)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=your_redis_password_if_any

# CORS Configuration
CORS_ORIGIN=https://admin.neture.co.kr,https://neture.co.kr,https://shop.neture.co.kr
FRONTEND_URL=https://admin.neture.co.kr

# Email Configuration (for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password
EMAIL_FROM=noreply@neture.co.kr

# AWS S3 Configuration (for file uploads)
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=ap-northeast-2
AWS_S3_BUCKET=neture-uploads

# Upload Configuration
UPLOAD_DIR=/var/www/uploads
MAX_FILE_SIZE=10485760  # 10MB in bytes

# Security
RATE_LIMIT_WINDOW_MS=900000  # 15 minutes
RATE_LIMIT_MAX=100  # Maximum requests per window
BCRYPT_ROUNDS=10

# Logging
LOG_LEVEL=info
LOG_DIR=/var/log/o4o-api

# Monitoring
ENABLE_MONITORING=true
METRICS_PORT=9090

# External APIs (if needed)
WORDPRESS_API_URL=https://wordpress.neture.co.kr/wp-json/wp/v2
PAYMENT_API_KEY=your_payment_api_key
ANALYTICS_API_KEY=your_analytics_api_key

# Feature Flags
ENABLE_SWAGGER=false
ENABLE_GRAPHQL=false
ENABLE_WEBSOCKET=true

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *  # Daily at 2 AM
BACKUP_RETENTION_DAYS=30

# Debug (set to false in production)
DEBUG_CORS=false
DEBUG_SQL=false