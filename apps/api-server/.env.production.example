# ================================
# O4O Platform - API Server Production Environment
# Copy this file to .env.production and fill in your values
# cp .env.production.example .env.production
# chmod 600 .env.production
# ================================

# === Server Configuration ===
NODE_ENV=production
PORT=4000
HOST=0.0.0.0

# === Database (PostgreSQL) ===
DB_TYPE=postgres
DB_HOST=your-database-host
DB_PORT=5432
DB_USERNAME=postgres
DB_PASSWORD=your-database-password
DB_NAME=o4o_platform

# === Security & Authentication ===
JWT_SECRET=change-this-to-a-secure-random-string
JWT_REFRESH_SECRET=change-this-to-another-secure-random-string
SESSION_SECRET=change-this-to-yet-another-secure-random-string
BCRYPT_ROUNDS=12

# === Domain & CORS ===
COOKIE_DOMAIN=.your-domain.com
CORS_ORIGIN=https://your-domain.com,https://www.your-domain.com
FRONTEND_URL=https://your-frontend-domain.com

# === Redis (Optional) ===
REDIS_ENABLED=false
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# === Session Sync (Optional) ===
SESSION_SYNC_ENABLED=false

# === Email Service (Optional) ===
EMAIL_SERVICE_ENABLED=false
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-smtp-password
EMAIL_FROM=noreply@your-domain.com
EMAIL_FROM_NAME=O4O Platform

# === OpenTelemetry (Optional) ===
OTEL_EXPORTER_OTLP_ENDPOINT=
OTEL_SERVICE_NAME=o4o-api-server
