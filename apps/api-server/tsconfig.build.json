{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "noEmit": false,
    "outDir": "./dist",
    "rootDir": ".",
    "composite": false,
    "skipLibCheck": true,
    "strict": false,
    "noImplicitAny": false,
    "types": ["node"]
  },
  "include": [
    "src/**/*",
    "scripts/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "**/*.test.ts",
    "**/*.spec.ts",
    "src/__tests__/**/*",
    "src/loaders/**/*",
    "src/routes/v2/data.routes.ts",
    "src/services/AdvancedQueryService.ts",
    "src/services/QueryComplexityAnalyzer.ts",
    "src/modules/cpt-acf/**/*"
  ]
}