{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "noEmit": false,
    "outDir": "./dist",
    "rootDir": "./src",
    "composite": false,
    "skipLibCheck": true,
    "strict": false,
    "noImplicitAny": false,
    "types": ["node"]
  },
  "exclude": [
    "node_modules",
    "dist",
    "**/*.test.ts",
    "**/*.spec.ts",
    "src/__tests__/**/*",
    "src/loaders/**/*",
    "src/routes/v2/data.routes.ts",
    "src/services/AdvancedQueryService.ts",
    "src/services/QueryComplexityAnalyzer.ts",
    "src/modules/cpt-acf/**/*",
    "scripts/ai-admin-cli.ts",
    "scripts/seed-roles-permissions.ts",
    "src/scripts/**/*",
    "src/database/backfill-*.ts",
    "src/database/check-*.ts",
    "src/common/templates/**/*",
    "src/modules/shared/controllers/test-item.controller.ts",
    "src/modules/shared/services/test-item.service.ts",
    "src/modules/shared/routes/test-item.routes.ts",
    "src/modules/shared/entities/TestItem.ts",
    "src/modules/shared/dto/test-item.dto.ts",
    "modules/**/tests/**/*",
    "src/migrations/ARCHIVE_2025/**/*"
  ]
}