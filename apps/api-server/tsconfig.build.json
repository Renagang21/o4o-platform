{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "noEmit": false,
    "outDir": "./dist",
    "rootDir": "./src",
    "composite": false,
    "skipLibCheck": true,
    "strict": false,
    "noImplicitAny": false
  },
  "exclude": [
    "node_modules",
    "dist",
    "**/*.test.ts",
    "**/*.spec.ts",
    "src/__tests__/**/*",
    "src/cache/**/*",
    "src/loaders/**/*",
    "src/routes/v2/**/*",
    "src/security/**/*",
    "src/services/AdvancedQueryService.ts",
    "src/services/QueryComplexityAnalyzer.ts"
  ]
}