{
  "name": "@o4o/appearance-system",
  "version": "1.0.0",
  "description": "Design tokens and appearance system for O4O Platform - Single Source of Truth (SSOT)",
  "o4o:packageType": "infra-core",
  "o4o:note": "Infrastructure Core - NOT an AppStore app. Visual design token system.",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "sideEffects": false,
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "npx tsc --build",
    "type-check": "tsc --noEmit",
    "lint": "echo 'Lint not configured yet'",
    "test": "NODE_OPTIONS=--experimental-vm-modules jest",
    "test:watch": "NODE_OPTIONS=--experimental-vm-modules jest --watch",
    "test:coverage": "NODE_OPTIONS=--experimental-vm-modules jest --coverage"
  },
  "keywords": [
    "design-tokens",
    "appearance",
    "theming",
    "css-variables",
    "o4o"
  ],
  "author": "O4O Platform Team",
  "license": "UNLICENSED",
  "devDependencies": {
    "@jest/globals": "^30.1.2",
    "@types/jest": "29.5.14",
    "jest": "29.7.0",
    "ts-jest": "29.4.1",
    "typescript": "5.4.5"
  },
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=10.0.0"
  }
}
