    "uuid": "^9.0.0"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@types/node-cron": "^3.0.11",
    "@types/uuid": "^9.0.7",
    "typescript": "^5.3.0",
    "rimraf": "^5.0.0"
  },
  "peerDependencies": {
    "express": "^4.18.0",
    "typeorm": "^0.3.17"
  }
