{
  "name": "@o4o/yaksa-scheduler",
  "version": "0.1.0",
  "description": "Central Scheduler for Yaksa Services - Cron-based job execution with failure queue",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
