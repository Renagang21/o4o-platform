# ================================
# O4O Platform - API Server Environment Variables Example
# 이 파일을 .env.apiserver로 복사하여 사용하세요
# cp .env.apiserver.example .env.apiserver
# chmod 600 .env.apiserver
# ================================

# === 서버 기본 설정 ===
NODE_ENV=production
SERVER_TYPE=apiserver
API_BASE_URL=https://api.neture.co.kr

# === 데이터베이스 (PostgreSQL) ===
DB_TYPE=postgres
DB_HOST=43.202.242.215
DB_PORT=5432
DB_USERNAME=postgres
DB_PASSWORD=postgres
DB_NAME=o4o_platform

# === 보안 및 인증 ===
JWT_SECRET=change-this-jwt-secret-key
JWT_REFRESH_SECRET=change-this-refresh-secret-key
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d
SESSION_SECRET=change-this-session-secret-key

# === CORS 설정 ===

# === 이메일 서비스 (SMTP) ===
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-app-specific-password
EMAIL_SERVICE_ENABLED=false

# === 파일 업로드 ===
UPLOAD_MAX_SIZE=10485760
UPLOAD_ALLOWED_TYPES=image/jpeg,image/png,image/gif,application/pdf
UPLOAD_DIR=./uploads

# === 미디어 URL 설정 ===
# Static files are served by nginx on webserver, not API server
PUBLIC_URL=https://neture.co.kr
MEDIA_BASE_URL=https://neture.co.kr

# === Redis (선택적) ===
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_ENABLED=false

# === 로깅 ===
LOG_LEVEL=info
LOG_DIR=./logs

# === 모니터링 ===
MONITORING_ENABLED=true
HEALTH_CHECK_PATH=/api/health

# === API 문서 ===
SWAGGER_ENABLED=false
API_DOCS_PATH=/api-docs

# === 소셜 로그인 (선택적) ===
# GOOGLE_CLIENT_ID=your-google-client-id
# GOOGLE_CLIENT_SECRET=your-google-client-secret
# FACEBOOK_APP_ID=your-facebook-app-id
# FACEBOOK_APP_SECRET=your-facebook-app-secret
# KAKAO_CLIENT_ID=your-kakao-client-id
# KAKAO_CLIENT_SECRET=your-kakao-client-secret
# NAVER_CLIENT_ID=your-naver-client-id
# NAVER_CLIENT_SECRET=your-naver-client-secret

# === 서버 포트 설정 ===
PORT=3002

# CORS Configuration
CORS_ORIGIN=https://admin.neture.co.kr,https://neture.co.kr,http://localhost:3000,http://localhost:3001,http://localhost:5173,http://localhost:5174
CORS_CREDENTIALS=true
