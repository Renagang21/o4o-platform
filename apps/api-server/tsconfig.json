{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ES2022",
    "outDir": "./dist",
    "rootDir": "./src",
    "noEmit": false,
    "strict": false,
    "noEmitOnError": false,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "downlevelIteration": true,
    "skipLibCheck": true,
    "moduleResolution": "bundler",
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "useDefineForClassFields": false,
    "noImplicitAny": false,
    "strictNullChecks": false,
    "strictFunctionTypes": false,
    "noImplicitThis": false,
    "noImplicitReturns": false,
    "strictPropertyInitialization": false,
    "composite": true,
    "baseUrl": ".",
    "paths": {
      "@o4o/membership-yaksa/*": ["../../packages/membership-yaksa/dist/*"],
      "@o4o/reporting-yaksa/*": ["../../packages/reporting-yaksa/dist/*"],
      "@o4o/dropshipping-cosmetics/*": ["../../packages/dropshipping-cosmetics/dist/*"],
      "@o4o/annualfee-yaksa": ["../../packages/annualfee-yaksa/dist"],
      "@o4o/annualfee-yaksa/*": ["../../packages/annualfee-yaksa/dist/*"],
      "@o4o/cosmetics-seller-extension/backend": ["../../packages/cosmetics-seller-extension/dist/backend"],
      "@o4o/cosmetics-seller-extension/manifest": ["../../packages/cosmetics-seller-extension/dist/manifest"],
      "@o4o/platform-core/store-identity": ["../../packages/platform-core/dist/store-identity"],
      "@o4o/platform-core/store-policy": ["../../packages/platform-core/dist/store-policy"],
      "@o4o/*": ["../../packages/*/dist"],
      "@o4o/forum-core": ["../../packages/forum-core/dist"],
      "@o4o/forum-core/*": ["../../packages/forum-core/dist/*"],
      "@o4o-apps/signage": ["../../packages/@o4o-apps/signage/dist"],
      "@o4o-apps/*": ["../../packages/*/dist"],
      "@o4o-extensions/*": ["../../packages/*/dist"]
    },
    "types": [
      "node"
    ],
    "typeRoots": [
      "node_modules/@types"
    ],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true
  },
  "include": [
    "src/**/*",
    "src/types/**/*.d.ts",
    "src/types/express.d.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "**/__tests__/**",
    "**/*.test.ts",
    "**/*.spec.ts"
  ]
}