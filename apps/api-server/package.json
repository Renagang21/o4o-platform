{
  "name": "@o4o/api-server",
  "version": "1.0.0",
  "description": "O4O Platform API Server",
  "main": "dist/main.js",
  "engines": {
    "node": ">=20.0.0 <21.0.0",
    "npm": ">=9.0.0"
  },
  "scripts": {
    "start": "node dist/main.js",
    "dev": "nodemon --exec ts-node src/main.ts",
    "build": "tsc",
    "test": "npx jest --passWithNoTests",
    "test:unit": "npx jest --testPathPattern=unit --passWithNoTests",
    "test:integration": "npx jest --testPathPattern=integration --passWithNoTests",
    "test:coverage": "npx jest --coverage --passWithNoTests",
    "type-check": "tsc --noEmit",
    "lint": "eslint --config ../../eslint.config.js src/**/*.ts --max-warnings 1000 || true",
    "lint:fix": "eslint --config ../../eslint.config.js src/**/*.ts --fix",
    "prettier": "prettier --check src/**/*.ts",
    "prettier:fix": "prettier --write src/**/*.ts",
    "create-admin": "npx ts-node ../../scripts/create-admin.ts",
    "db:test": "node ../../scripts/test-database.js",
    "db:setup": "docker-compose -f ../../docker-compose.dev.yml up -d postgres redis",
    "db:stop": "docker-compose -f ../../docker-compose.dev.yml stop postgres redis",
    "db:reset": "docker-compose -f ../../docker-compose.dev.yml down -v && docker-compose -f ../../docker-compose.dev.yml up -d postgres redis",
    "db:logs": "docker logs o4o-postgres-dev",
    "dev:full": "npm run db:setup && sleep 5 && npm run db:test && npm run dev",
    "migration:generate": "npx typeorm-ts-node-commonjs migration:generate -d src/database/connection.ts",
    "migration:run": "npx typeorm-ts-node-commonjs migration:run -d src/database/connection.ts",
    "migration:revert": "npx typeorm-ts-node-commonjs migration:revert -d src/database/connection.ts"
  },
  "dependencies": {
    "@types/compression": "^1.8.1",
    "@types/cookie-parser": "^1.4.9",
    "@types/express-session": "^1.18.2",
    "@types/multer": "^1.4.13",
    "@types/uuid": "^10.0.0",
    "axios": "^1.10.0",
    "bcryptjs": "^2.4.3",
    "compression": "^1.8.0",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "express-rate-limit": "^6.7.0",
    "express-session": "^1.18.1",
    "express-validator": "^6.15.0",
    "helmet": "^6.0.1",
    "ioredis": "^5.6.1",
    "jsonwebtoken": "^9.0.0",
    "multer": "^2.0.1",
    "node-cron": "^4.2.0",
    "pg": "^8.11.3",
    "reflect-metadata": "^0.1.13",
    "sharp": "^0.34.2",
    "socket.io": "^4.6.1",
    "typeorm": "^0.3.20",
    "uuid": "^11.1.0",
    "winston": "^3.8.2"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.2",
    "@types/cors": "^2.8.13",
    "@types/express": "^4.17.17",
    "@types/jest": "^29.5.1",
    "@types/jsonwebtoken": "^9.0.1",
    "@types/node": "^20.18.0",
    "@types/pg": "^8.10.9",
    "eslint": "^9.29.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.2.1",
    "jest": "^29.5.0",
    "nodemon": "^3.1.7",
    "prettier": "^3.0.0",
    "ts-jest": "^29.1.0",
    "ts-node": "^10.9.1",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.18.0"
  }
}
