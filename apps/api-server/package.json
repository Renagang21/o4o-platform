{
  "name": "@o4o/api-server",
  "version": "1.0.0",
  "description": "O4O Platform API Server",
  "main": "dist/main.js",
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=10.0.0"
  },
  "scripts": {
    "start": "node dist/main.js",
    "dev": "nodemon --exec ts-node src/main.ts",
    "dev:mock": "nodemon --exec ts-node src/server-mock.ts",
    "build": "tsc",
    "test": "npx jest --passWithNoTests",
    "test:unit": "npx jest --testPathPattern=unit",
    "test:integration": "npx jest --testPathPattern=integration",
    "test:coverage": "npx jest --coverage",
    "test:e2e": "npx jest --testPathPattern=e2e",
    "type-check": "npx tsc --noEmit",
    "lint": "eslint --config ../../.eslintrc.js src/**/*.ts --max-warnings 600 || true",
    "lint:fix": "eslint --config ../../.eslintrc.js src/**/*.ts --fix",
    "prettier:check": "prettier --check src/**/*.ts",
    "prettier:fix": "prettier --write src/**/*.ts",
    "create-admin": "npx ts-node ../../scripts/create-admin.ts",
    "create-test-users": "npx ts-node src/scripts/create-test-users.ts",
    "db:test": "node ../../scripts/test-database.js",
    "db:test:detailed": "npx ts-node src/scripts/test-db-connection.ts",
    "db:setup": "docker-compose -f ../../docker-compose.dev.yml up -d postgres redis",
    "db:stop": "docker-compose -f ../../docker-compose.dev.yml stop postgres redis",
    "db:reset": "docker-compose -f ../../docker-compose.dev.yml down -v && docker-compose -f ../../docker-compose.dev.yml up -d postgres redis",
    "db:logs": "docker logs o4o-postgres-dev",
    "dev:full": "npm run db:setup && sleep 5 && npm run db:test && npm run dev",
    "migration:generate": "npx typeorm-ts-node-commonjs migration:generate -d src/database/data-source.ts",
    "migration:run": "NODE_ENV=${NODE_ENV:-development} npx typeorm-ts-node-commonjs migration:run -d src/database/data-source.ts",
    "migration:revert": "npx typeorm-ts-node-commonjs migration:revert -d src/database/data-source.ts"
  },
  "dependencies": {
    "@o4o/auth-client": "file:../../packages/auth-client",
    "@o4o/crowdfunding-types": "file:../../packages/crowdfunding-types",
    "@o4o/types": "file:../../packages/types",
    "@o4o/utils": "file:../../packages/utils",
    "@types/swagger-jsdoc": "6.0.4",
    "@types/swagger-ui-express": "4.1.8",
    "axios": "^1.10.0",
    "bcrypt": "6.0.0",
    "bcryptjs": "^2.4.3",
    "compression": "1.8.1",
    "connect-redis": "9.0.0",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "dotenv": "^16.6.1",
    "express": "^4.18.2",
    "express-rate-limit": "^6.7.0",
    "express-session": "^1.18.2",
    "express-validator": "^6.15.0",
    "helmet": "^6.0.1",
    "ioredis": "^5.6.1",
    "json2csv": "^6.0.0-alpha.2",
    "jsonwebtoken": "^9.0.0",
    "multer": "^2.0.1",
    "node-cache": "5.1.2",
    "node-cron": "^4.2.0",
    "node-fetch": "^2.7.0",
    "nodemailer": "^7.0.5",
    "passport": "^0.7.0",
    "passport-google-oauth20": "^2.0.0",
    "passport-kakao": "^1.0.1",
    "passport-naver-v2": "^2.0.8",
    "pg": "^8.11.3",
    "redis-cache-express": "1.3.1",
    "reflect-metadata": "^0.1.13",
    "sharp": "^0.34.3",
    "slugify": "^1.6.6",
    "socket.io": "^4.6.1",
    "swagger-jsdoc": "6.2.8",
    "swagger-ui-express": "5.0.1",
    "ts-node": "^10.9.1",
    "typeorm": "^0.3.20",
    "ua-parser-js": "^2.0.4",
    "uuid": "^11.1.0",
    "winston": "^3.8.2"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.2",
    "@types/compression": "^1.8.1",
    "@types/cookie-parser": "^1.4.9",
    "@types/cors": "^2.8.13",
    "@types/express": "^4.17.17",
    "@types/express-session": "^1.18.2",
    "@types/jest": "^29.5.1",
    "@types/jsonwebtoken": "^9.0.1",
    "@types/multer": "1.4.13",
    "@types/node": "^22.10.2",
    "@types/node-cron": "^3.0.11",
    "@types/node-fetch": "^2.6.11",
    "@types/nodemailer": "^6.4.17",
    "@types/passport": "^1.0.17",
    "@types/passport-google-oauth20": "^2.0.16",
    "@types/pg": "^8.10.9",
    "@types/uuid": "^10.0.0",
    "eslint": "^9.31.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.2.1",
    "jest": "^29.5.0",
    "nodemon": "^3.1.7",
    "prettier": "^3.0.0",
    "ts-jest": "^29.1.0",
    "typescript": "~5.9.2",
    "typescript-eslint": "^8.38.0"
  }
}
