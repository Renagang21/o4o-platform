# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_USERNAME=postgres
DB_PASSWORD=your_password
DB_NAME=o4o_platform

# Application Configuration
NODE_ENV=development
PORT=4000

# ==================== JWT/SSO Configuration ====================
# 🔐 중요: 프로덕션에서는 강력한 시크릿 키 사용 필수
JWT_SECRET=your_super_secret_jwt_key_change_this_in_production
JWT_REFRESH_SECRET=your_super_secret_refresh_key_change_this_in_production

# Cookie Configuration (CLAUDE.md 정책 기반)
COOKIE_DOMAIN=.neture.co.kr
COOKIE_SECURE=false  # 프로덕션에서는 true (HTTPS 필수)

# Redis Configuration (for caching and session management)
REDIS_ENABLED=true
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# Payment Gateway Configuration

# 아임포트 (Iamport)
IAMPORT_API_KEY=your_iamport_api_key
IAMPORT_API_SECRET=your_iamport_api_secret
IAMPORT_WEBHOOK_SECRET=your_iamport_webhook_secret

# 토스페이먼츠 (Toss Payments)
TOSS_PAYMENTS_CLIENT_KEY=your_toss_client_key
TOSS_PAYMENTS_SECRET_KEY=your_toss_secret_key
TOSS_PAYMENTS_WEBHOOK_SECRET=your_toss_webhook_secret

# 카카오페이 (Kakao Pay)
KAKAO_PAY_CID=your_kakao_pay_cid
KAKAO_PAY_SECRET_KEY=your_kakao_pay_secret
KAKAO_PAY_WEBHOOK_SECRET=your_kakao_webhook_secret

# 네이버페이 (Naver Pay)
NAVER_PAY_CLIENT_ID=your_naver_pay_client_id
NAVER_PAY_CLIENT_SECRET=your_naver_pay_client_secret
NAVER_PAY_WEBHOOK_SECRET=your_naver_webhook_secret

# Email Configuration (optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_email_password

# File Upload Configuration
UPLOAD_PATH=./uploads
MAX_FILE_SIZE=10485760

# Security Configuration
CORS_ORIGIN=http://localhost:3000
SESSION_SECRET=your_session_secret

# Monitoring and Logging
LOG_LEVEL=info
ENABLE_REQUEST_LOGGING=true

# Performance Settings
DB_CONNECTION_POOL_MAX=20
DB_CONNECTION_POOL_MIN=5
CACHE_TTL_DEFAULT=300

# Development Settings (only for development)
ENABLE_SWAGGER=true
ENABLE_PLAYGROUND=true