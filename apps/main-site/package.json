{
  "name": "@o4o/main-site",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "engines": {
    "node": ">=22.18.0",
    "pnpm": ">=9.0.0"
  },
  "scripts": {
    "dev": "vite",
    "build": "NODE_ENV=production npx --no-install vite build --mode production",
    "build:clean": "rm -rf dist && NODE_ENV=production npx vite build --mode production",
    "lint": "eslint --config ../../eslint.config.js src/**/*.{ts,tsx} --max-warnings 500 || true",
    "lint:fix": "eslint --config ../../eslint.config.js src/**/*.{ts,tsx} --fix",
    "type-check": "tsc --noEmit",
    "prettier": "prettier --check \"src/**/*.{ts,tsx,js,jsx}\"",
    "prettier:fix": "prettier --write \"src/**/*.{ts,tsx,js,jsx}\"",
    "preview": "npx vite preview",
    "test": "npx vitest --passWithNoTests",
    "test:unit": "npx vitest run",
    "test:simple": "npx vitest run --config vitest.config.simple.ts",
    "test:integration": "npx vitest run --config vitest.config.integration.ts",
    "test:coverage": "npx vitest run --coverage",
    "test:ui": "npx vitest --ui",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:debug": "playwright test --debug",
    "test:e2e:report": "playwright show-report",
    "build:analyze": "vite build --mode production --config vite.config.analyze.ts || echo 'Bundle analysis not configured'"
  },
  "dependencies": {
    "@o4o/types": "file:../../packages/types",
    "@o4o/ui": "file:../../packages/ui",
    "@o4o/utils": "file:../../packages/utils",
    "@tanstack/react-query": "^5.78.2",
    "@types/dompurify": "^3.0.5",
    "@vitejs/plugin-react": "4.7.0",
    "@wordpress/block-editor": "14.4.0",
    "@wordpress/blocks": "13.9.0",
    "@wordpress/components": "30.4.0",
    "@wordpress/element": "6.9.0",
    "@wordpress/i18n": "5.9.0",
    "axios": "^1.10.0",
    "clsx": "^2.1.1",
    "date-fns": "3.6.0",
    "dompurify": "^3.2.6",
    "framer-motion": "^10.18.0",
    "js-cookie": "^3.0.5",
    "lucide-react": "^0.523.0",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "react-dropzone": "^14.3.8",
    "react-hook-form": "^7.60.0",
    "react-hot-toast": "^2.5.2",
    "react-icons": "5.5.0",
    "react-router-dom": "^7.6.0",
    "socket.io-client": "^4.7.4",
    "tailwind-merge": "^2.5.5",
    "vite": "^5.4.0",
    "zustand": "^5.0.5"
  },
  "devDependencies": {
    "@eslint/js": "^9.29.0",
    "@playwright/test": "^1.53.1",
    "@rollup/rollup-linux-x64-gnu": "^4.44.1",
    "@testing-library/dom": "^10.4.0",
    "@testing-library/jest-dom": "6.6.4",
    "@testing-library/react": "16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/js-cookie": "^3.0.6",
    "@types/react": "^18.2.79",
    "@types/react-dom": "^18.2.25",
    "@vitest/coverage-v8": "^2.1.8",
    "@vitest/ui": "^2.1.8",
    "autoprefixer": "10.4.16",
    "eslint": "^9.31.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.2.1",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "globals": "^16.0.0",
    "jsdom": "26.1.0",
    "lightningcss": "^1.30.1",
    "msw": "^2.10.2",
    "postcss": "8.4.31",
    "prettier": "3.3.3",
    "tailwindcss": "3.4.17",
    "terser": "^5.43.1",
    "typescript": "5.4.5",
    "typescript-eslint": "^8.38.0",
    "vitest": "3.2.4"
  }
}
