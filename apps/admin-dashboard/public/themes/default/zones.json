{
  "$schema": "https://o4o-platform.com/schemas/zones.json",
  "version": "1.0.0",
  "zones": {
    "header": {
      "id": "header",
      "name": "Header",
      "description": "Site header area containing logo, navigation, and top-level information",
      "type": "header",
      "editable": true,
      "constraints": {
        "allowedBlocks": [
          "core/site-logo",
          "core/site-title",
          "core/navigation",
          "core/search",
          "core/social-links",
          "core/spacer",
          "core/group",
          "core/columns"
        ],
        "maxBlocks": 10,
        "minBlocks": 1,
        "required": true,
        "singleton": false,
        "allowNesting": true,
        "maxNestingLevel": 2
      },
      "defaultBlocks": [
        {
          "type": "core/group",
          "attributes": {
            "layout": "flex",
            "justifyContent": "space-between",
            "alignItems": "center"
          },
          "innerBlocks": [
            {
              "type": "core/site-logo",
              "attributes": {
                "width": 120
              }
            },
            {
              "type": "core/navigation",
              "attributes": {
                "orientation": "horizontal"
              }
            }
          ]
        }
      ],
      "settings": {
        "sticky": false,
        "transparentOnScroll": false,
        "height": "auto",
        "minHeight": "60px",
        "maxHeight": "120px",
        "backgroundColor": "var(--wp--preset--color--white)",
        "borderBottom": "1px solid var(--wp--preset--color--gray-200)"
      }
    },
    "main": {
      "id": "main",
      "name": "Main Content",
      "description": "Primary content area for pages and posts",
      "type": "main",
      "editable": true,
      "constraints": {
        "allowedBlocks": [
          "core/paragraph",
          "core/heading",
          "core/image",
          "core/gallery",
          "core/list",
          "core/quote",
          "core/code",
          "core/table",
          "core/columns",
          "core/group",
          "core/separator",
          "core/spacer",
          "core/button",
          "core/buttons",
          "core/media-text",
          "core/cover",
          "core/video",
          "core/audio",
          "core/file",
          "core/embed",
          "custom/product-grid",
          "custom/testimonial",
          "custom/cta"
        ],
        "maxBlocks": null,
        "minBlocks": 1,
        "required": true,
        "singleton": false,
        "allowNesting": true,
        "maxNestingLevel": 5
      },
      "settings": {
        "width": "100%",
        "maxWidth": "840px",
        "padding": "2rem",
        "backgroundColor": "transparent",
        "minHeight": "60vh"
      }
    },
    "sidebar": {
      "id": "sidebar",
      "name": "Sidebar",
      "description": "Secondary content area for widgets and supplementary information",
      "type": "sidebar",
      "editable": true,
      "constraints": {
        "allowedBlocks": [
          "core/search",
          "core/latest-posts",
          "core/categories",
          "core/tag-cloud",
          "core/archives",
          "core/calendar",
          "core/rss",
          "core/social-links",
          "core/html",
          "core/group",
          "core/heading",
          "core/paragraph",
          "core/image",
          "custom/newsletter",
          "custom/recent-products",
          "custom/advertisement"
        ],
        "maxBlocks": 15,
        "minBlocks": 0,
        "required": false,
        "singleton": false,
        "allowNesting": true,
        "maxNestingLevel": 3
      },
      "settings": {
        "position": "right",
        "width": "300px",
        "sticky": true,
        "stickyOffset": 80,
        "padding": "1rem",
        "backgroundColor": "var(--wp--preset--color--gray-50)",
        "borderRadius": "8px"
      }
    },
    "footer": {
      "id": "footer",
      "name": "Footer",
      "description": "Site footer containing copyright, links, and contact information",
      "type": "footer",
      "editable": true,
      "constraints": {
        "allowedBlocks": [
          "core/paragraph",
          "core/heading",
          "core/navigation",
          "core/social-links",
          "core/columns",
          "core/group",
          "core/spacer",
          "core/separator",
          "core/image",
          "core/site-logo",
          "core/site-title",
          "custom/contact-info",
          "custom/newsletter",
          "custom/payment-methods"
        ],
        "maxBlocks": 20,
        "minBlocks": 1,
        "required": true,
        "singleton": false,
        "allowNesting": true,
        "maxNestingLevel": 3
      },
      "defaultBlocks": [
        {
          "type": "core/group",
          "attributes": {
            "layout": "constrained"
          },
          "innerBlocks": [
            {
              "type": "core/columns",
              "attributes": {
                "verticalAlignment": "top"
              },
              "innerBlocks": [
                {
                  "type": "core/column",
                  "innerBlocks": [
                    {
                      "type": "core/heading",
                      "attributes": {
                        "level": 3,
                        "content": "About Us"
                      }
                    },
                    {
                      "type": "core/paragraph",
                      "attributes": {
                        "content": "Your company description here."
                      }
                    }
                  ]
                },
                {
                  "type": "core/column",
                  "innerBlocks": [
                    {
                      "type": "core/heading",
                      "attributes": {
                        "level": 3,
                        "content": "Quick Links"
                      }
                    },
                    {
                      "type": "core/navigation",
                      "attributes": {
                        "orientation": "vertical"
                      }
                    }
                  ]
                },
                {
                  "type": "core/column",
                  "innerBlocks": [
                    {
                      "type": "core/heading",
                      "attributes": {
                        "level": 3,
                        "content": "Contact"
                      }
                    },
                    {
                      "type": "custom/contact-info"
                    }
                  ]
                }
              ]
            },
            {
              "type": "core/separator",
              "attributes": {
                "opacity": 0.2
              }
            },
            {
              "type": "core/paragraph",
              "attributes": {
                "align": "center",
                "content": "Â© 2024 Your Company. All rights reserved."
              }
            }
          ]
        }
      ],
      "settings": {
        "backgroundColor": "var(--wp--preset--color--gray-900)",
        "textColor": "var(--wp--preset--color--white)",
        "padding": "3rem 2rem 2rem",
        "marginTop": "4rem"
      }
    },
    "hero": {
      "id": "hero",
      "name": "Hero Section",
      "description": "Prominent hero area for featured content",
      "type": "custom",
      "editable": true,
      "constraints": {
        "allowedBlocks": [
          "core/cover",
          "core/media-text",
          "core/columns",
          "core/heading",
          "core/paragraph",
          "core/buttons",
          "core/image",
          "core/video",
          "custom/hero-slider",
          "custom/cta"
        ],
        "maxBlocks": 5,
        "minBlocks": 0,
        "required": false,
        "singleton": true,
        "allowNesting": true,
        "maxNestingLevel": 3
      },
      "settings": {
        "fullWidth": true,
        "minHeight": "50vh",
        "padding": "4rem 2rem",
        "backgroundColor": "var(--wp--preset--color--primary)"
      }
    }
  },
  "zoneGroups": {
    "essential": ["header", "main", "footer"],
    "optional": ["sidebar", "hero"],
    "custom": []
  },
  "blockConstraintRules": {
    "core/site-logo": {
      "maxInstances": 2,
      "allowedZones": ["header", "footer"],
      "requiredAttributes": {
        "width": {
          "min": 60,
          "max": 200
        }
      }
    },
    "core/navigation": {
      "maxInstances": 3,
      "allowedZones": ["header", "footer"],
      "requiredAttributes": {
        "orientation": ["horizontal", "vertical"]
      }
    },
    "custom/newsletter": {
      "maxInstances": 2,
      "allowedZones": ["sidebar", "footer"]
    }
  }
}