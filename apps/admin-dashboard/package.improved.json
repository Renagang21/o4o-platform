{
  "name": "@o4o/admin-dashboard",
  "version": "1.0.0",
  "description": "WordPress-style Admin Dashboard for O4O Platform",
  "type": "module",
  
  "scripts": {
    "dev": "vite --port 3001 --host 0.0.0.0",
    "dev:safe": "npm run cleanup && npm run dev",
    "dev:debug": "DEBUG=vite:* npm run dev",
    
    "build": "npm run type-check && vite build",
    "build:analyze": "npm run build -- --mode analyze",
    "preview": "vite preview --port 3001 --host 0.0.0.0",
    
    "type-check": "tsc --noEmit --skipLibCheck",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "lint:fix": "eslint . --ext ts,tsx --fix",
    
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:debug": "playwright test --debug",
    "test:e2e:report": "playwright show-report",
    
    "cleanup": "npm run cleanup:processes && npm run cleanup:files",
    "cleanup:processes": "pkill -f 'vite.*3001' || true && pkill -f 'vite.*3002' || true",
    "cleanup:files": "rm -f *.log && rm -f *-DESKTOP-*.* && rm -f server.js",
    "health-check": "curl -f http://localhost:3001/health || echo 'Server not running'",
    
    "postinstall": "npm run cleanup:files"
  },
  
  "dependencies": {
    "@headlessui/react": "^1.7.17",
    "@heroicons/react": "^2.0.18",
    "@o4o/auth-client": "file:../../packages/auth-client",
    "@o4o/auth-context": "file:../../packages/auth-context",
    
    "@tiptap/extension-code-block": "^2.23.0",
    "@tiptap/extension-code-block-lowlight": "^2.23.0",
    "@tiptap/extension-image": "^2.23.0",
    "@tiptap/extension-link": "^2.23.0",
    "@tiptap/extension-placeholder": "^2.23.0",
    "@tiptap/extension-table": "^2.23.0",
    "@tiptap/extension-table-cell": "^2.23.0",
    "@tiptap/extension-table-header": "^2.23.0",
    "@tiptap/extension-table-row": "^2.23.0",
    "@tiptap/react": "^2.23.0",
    "@tiptap/starter-kit": "^2.23.0",
    
    "@types/react-beautiful-dnd": "^13.1.8",
    "@types/react-dropzone": "^4.2.2",
    "axios": "^1.6.2",
    "clsx": "^2.0.0",
    "date-fns": "^2.30.0",
    "js-cookie": "^3.0.5",
    "lowlight": "^3.3.0",
    "lucide-react": "^0.294.0",
    "react": "^18.3.1",
    "react-beautiful-dnd": "^13.1.1",
    "react-dom": "^18.3.1",
    "react-dropzone": "^14.3.8",
    "react-hook-form": "^7.48.2",
    "react-hot-toast": "^2.4.1",
    "react-intersection-observer": "^9.16.0",
    "@tanstack/react-query": "^5.0.0",
    "react-router-dom": "^6.20.1",
    "recharts": "^2.8.0",
    "tailwind-merge": "^2.0.0",
    "zustand": "^4.4.7"
  },
  
  "devDependencies": {
    "@types/react": "^18.2.37",
    "@types/react-dom": "^18.2.15",
    "@typescript-eslint/eslint-plugin": "^6.10.0",
    "@typescript-eslint/parser": "^6.10.0",
    "@vitejs/plugin-react": "^4.1.1",
    "autoprefixer": "^10.4.16",
    "eslint": "^8.53.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.4",
    "postcss": "^8.4.31",
    "tailwindcss": "^3.3.5",
    "typescript": "^5.2.2",
    "vite": "^4.5.0"
  },
  
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=9.0.0"
  }
}