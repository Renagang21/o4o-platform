{
  "name": "@o4o/admin-dashboard",
  "version": "1.0.0",
  "description": "WordPress-style Admin Dashboard for O4O Platform",
  "type": "module",
  "scripts": {
    "dev": "vite --port 3001",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "type-check": "tsc --noEmit",
    "lint": "eslint --config ../../eslint.config.js src/**/*.{ts,tsx} --report-unused-disable-directives --max-warnings 200 || true",
    "lint:fix": "eslint --config ../../eslint.config.js src/**/*.{ts,tsx} --fix",
    "test": "vitest --passWithNoTests",
    "test:unit": "vitest run --passWithNoTests",
    "test:coverage": "vitest run --coverage --passWithNoTests",
    "test:ui": "vitest --ui",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:debug": "playwright test --debug",
    "test:e2e:report": "playwright show-report"
  },
  "dependencies": {
    "@heroicons/react": "^2.0.18",
    "@o4o/auth-client": "file:../../packages/auth-client",
    "@o4o/auth-context": "file:../../packages/auth-context",
    "@radix-ui/react-dropdown-menu": "^2.1.15",
    "@remix-run/router": "^1.23.0",
    "@tanstack/react-query": "^5.81.5",
    "@tiptap/extension-code-block": "^2.23.0",
    "@tiptap/extension-code-block-lowlight": "^2.23.0",
    "@tiptap/extension-image": "^2.23.0",
    "@tiptap/extension-link": "^2.23.0",
    "@tiptap/extension-placeholder": "^2.23.0",
    "@tiptap/extension-table": "^2.23.0",
    "@tiptap/extension-table-cell": "^2.23.0",
    "@tiptap/extension-table-header": "^2.23.0",
    "@tiptap/extension-table-row": "^2.23.0",
    "@tiptap/react": "^2.23.0",
    "@tiptap/starter-kit": "^2.23.0",
    "@types/react-dropzone": "^4.2.2",
    "@types/socket.io-client": "^1.4.36",
    "axios": "^1.6.2",
    "clsx": "^2.0.0",
    "date-fns": "^2.30.0",
    "js-cookie": "^3.0.5",
    "lowlight": "^3.3.0",
    "lucide-react": "^0.460.0",
    "postcss-nested": "^6.2.0",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "react-dropzone": "^14.3.8",
    "react-hook-form": "^7.48.2",
    "react-hot-toast": "^2.4.1",
    "react-intersection-observer": "^9.16.0",
    "react-router-dom": "^6.20.1",
    "recharts": "^2.8.0",
    "socket.io-client": "^4.8.1",
    "tailwind-merge": "^2.0.0",
    "zustand": "^4.4.7"
  },
  "devDependencies": {
    "@playwright/test": "^1.53.2",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/js-cookie": "^3.0.6",
    "@types/react": "^19.1.8",
    "@types/react-dom": "^19.1.6",
    "@typescript-eslint/eslint-plugin": "^6.10.0",
    "@typescript-eslint/parser": "^6.10.0",
    "@vitejs/plugin-react": "^4.6.0",
    "autoprefixer": "^10.4.16",
    "eslint": "^8.53.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.4",
    "msw": "^2.10.3",
    "postcss": "^8.4.31",
    "tailwindcss": "^3.3.5",
    "typescript": "^5.2.2",
    "vite": "^6.3.5",
    "vitest": "^3.2.4"
  }
}
