{
  "name": "@o4o/admin-dashboard",
  "version": "1.0.0",
  "description": "WordPress-style Admin Dashboard for O4O Platform",
  "type": "module",
  "scripts": {
    "dev": "vite --port 3001",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "type-check": "tsc --noEmit",
    "lint": "eslint --config ../../eslint.config.js src/**/*.{ts,tsx} --report-unused-disable-directives --max-warnings 200 || true",
    "lint:fix": "eslint --config ../../eslint.config.js src/**/*.{ts,tsx} --fix",
    "test": "vitest --passWithNoTests",
    "test:coverage": "vitest run --coverage",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:debug": "playwright test --debug",
    "test:e2e:report": "playwright show-report",
    "build:analyze": "vite build --mode production --config vite.config.analyze.ts || echo 'Bundle analysis not configured'"
  },
  "dependencies": {
    "@dnd-kit/core": "^6.3.1",
    "@dnd-kit/sortable": "^10.0.0",
    "@dnd-kit/utilities": "^3.2.2",
    "@heroicons/react": "^2.0.18",
    "@hookform/resolvers": "^5.1.1",
    "@o4o/auth-client": "file:../../packages/auth-client",
    "@o4o/auth-context": "file:../../packages/auth-context",
    "@o4o/types": "file:../../packages/types",
    "@o4o/utils": "file:../../packages/utils",
    "@remix-run/router": "^1.23.0",
    "@tanstack/react-query": "^5.78.2",
    "@tiptap/extension-code-block": "^2.22.0",
    "@tiptap/extension-code-block-lowlight": "^2.22.0",
    "@tiptap/extension-image": "^2.22.0",
    "@tiptap/extension-link": "^2.22.0",
    "@tiptap/extension-placeholder": "^2.22.0",
    "@tiptap/extension-table": "^2.22.0",
    "@tiptap/extension-table-cell": "^2.22.0",
    "@tiptap/extension-table-header": "^2.22.0",
    "@tiptap/extension-table-row": "^2.22.0",
    "@tiptap/react": "^2.22.0",
    "@tiptap/starter-kit": "^2.22.0",
    "@types/react-dropzone": "^4.2.2",
    "@types/socket.io-client": "^1.4.36",
    "@types/uuid": "10.0.0",
    "axios": "^1.10.0",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "date-fns": "^3.3.1",
    "js-cookie": "^3.0.5",
    "lowlight": "^3.3.0",
    "lucide-react": "^0.523.0",
    "postcss-nested": "^6.2.0",
    "react": "^19.1.0",
    "react-dnd": "^16.0.1",
    "react-dnd-html5-backend": "^16.0.1",
    "react-dom": "^19.1.0",
    "react-dropzone": "^14.3.8",
    "react-hook-form": "^7.48.2",
    "react-hot-toast": "^2.4.1",
    "react-intersection-observer": "^9.16.0",
    "react-router-dom": "^7.6.0",
    "recharts": "^3.1.0",
    "socket.io-client": "^4.7.4",
    "tailwind-merge": "^2.5.5",
    "uuid": "11.1.0",
    "zod": "^4.0.5",
    "zustand": "^5.0.5"
  },
  "devDependencies": {
    "@playwright/test": "^1.53.2",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/js-cookie": "^3.0.6",
    "@types/lodash": "^4.17.20",
    "@types/react": "^19.1.2",
    "@types/react-dom": "^19.1.2",
    "@types/wordpress__api-fetch": "3.2.4",
    "@types/wordpress__block-editor": "11.5.17",
    "@types/wordpress__blocks": "12.5.16",
    "@types/wordpress__components": "23.0.12",
    "@types/wordpress__element": "2.4.1",
    "@types/wordpress__i18n": "3.4.0",
    "@typescript-eslint/eslint-plugin": "^8.38.0",
    "@typescript-eslint/parser": "^8.38.0",
    "@vitejs/plugin-react": "^4.4.1",
    "autoprefixer": "^10.4.20",
    "eslint": "^9.31.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.4",
    "msw": "^2.10.3",
    "postcss": "^8.4.49",
    "rollup-plugin-visualizer": "^6.0.3",
    "tailwindcss": "^4.1.0",
    "typescript": "~5.9.2",
    "vite": "^7.0.6",
    "vitest": "^3.2.4"
  },
  "msw": {
    "workerDirectory": [
      "public"
    ]
  },
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=10.0.0"
  }
}
