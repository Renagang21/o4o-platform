{
  "$schema": "https://o4o-platform.com/schemas/layout.json",
  "version": "1.0.0",
  "layouts": {
    "single-column": {
      "id": "single-column",
      "name": "Single Column",
      "description": "Full-width single column layout",
      "preview": "/themes/default/previews/single-column.png",
      "structure": {
        "type": "grid",
        "areas": [
          "header",
          "hero",
          "main",
          "footer"
        ],
        "template": "1fr",
        "gap": "0"
      },
      "zones": {
        "header": {
          "gridArea": "header",
          "order": 1
        },
        "hero": {
          "gridArea": "hero",
          "order": 2,
          "optional": true
        },
        "main": {
          "gridArea": "main",
          "order": 3
        },
        "footer": {
          "gridArea": "footer",
          "order": 4
        }
      },
      "responsive": {
        "desktop": {
          "minWidth": "1024px",
          "containerWidth": "1200px",
          "padding": "0 2rem"
        },
        "tablet": {
          "minWidth": "768px",
          "maxWidth": "1023px",
          "containerWidth": "100%",
          "padding": "0 1.5rem"
        },
        "mobile": {
          "maxWidth": "767px",
          "containerWidth": "100%",
          "padding": "0 1rem"
        }
      }
    },
    "two-column": {
      "id": "two-column",
      "name": "Two Column",
      "description": "Main content with sidebar",
      "preview": "/themes/default/previews/two-column.png",
      "structure": {
        "type": "grid",
        "areas": [
          "header header",
          "hero hero",
          "main sidebar",
          "footer footer"
        ],
        "template": "1fr 300px",
        "gap": "2rem"
      },
      "zones": {
        "header": {
          "gridArea": "header",
          "order": 1
        },
        "hero": {
          "gridArea": "hero",
          "order": 2,
          "optional": true
        },
        "main": {
          "gridArea": "main",
          "order": 3
        },
        "sidebar": {
          "gridArea": "sidebar",
          "order": 4
        },
        "footer": {
          "gridArea": "footer",
          "order": 5
        }
      },
      "responsive": {
        "desktop": {
          "minWidth": "1024px",
          "containerWidth": "1200px",
          "padding": "0 2rem",
          "sidebarWidth": "300px"
        },
        "tablet": {
          "minWidth": "768px",
          "maxWidth": "1023px",
          "containerWidth": "100%",
          "padding": "0 1.5rem",
          "sidebarWidth": "250px",
          "structure": {
            "template": "1fr 250px"
          }
        },
        "mobile": {
          "maxWidth": "767px",
          "containerWidth": "100%",
          "padding": "0 1rem",
          "structure": {
            "areas": [
              "header",
              "hero",
              "main",
              "sidebar",
              "footer"
            ],
            "template": "1fr"
          }
        }
      }
    },
    "three-column": {
      "id": "three-column",
      "name": "Three Column",
      "description": "Main content with left and right sidebars",
      "preview": "/themes/default/previews/three-column.png",
      "structure": {
        "type": "grid",
        "areas": [
          "header header header",
          "hero hero hero",
          "left-sidebar main right-sidebar",
          "footer footer footer"
        ],
        "template": "250px 1fr 250px",
        "gap": "2rem"
      },
      "zones": {
        "header": {
          "gridArea": "header",
          "order": 1
        },
        "hero": {
          "gridArea": "hero",
          "order": 2,
          "optional": true
        },
        "left-sidebar": {
          "gridArea": "left-sidebar",
          "order": 3,
          "zoneId": "sidebar",
          "className": "sidebar-left"
        },
        "main": {
          "gridArea": "main",
          "order": 4
        },
        "right-sidebar": {
          "gridArea": "right-sidebar",
          "order": 5,
          "zoneId": "sidebar",
          "className": "sidebar-right"
        },
        "footer": {
          "gridArea": "footer",
          "order": 6
        }
      },
      "responsive": {
        "desktop": {
          "minWidth": "1280px",
          "containerWidth": "1400px",
          "padding": "0 2rem"
        },
        "tablet": {
          "minWidth": "768px",
          "maxWidth": "1279px",
          "containerWidth": "100%",
          "padding": "0 1.5rem",
          "structure": {
            "areas": [
              "header header",
              "hero hero",
              "main right-sidebar",
              "footer footer"
            ],
            "template": "1fr 250px"
          }
        },
        "mobile": {
          "maxWidth": "767px",
          "containerWidth": "100%",
          "padding": "0 1rem",
          "structure": {
            "areas": [
              "header",
              "hero",
              "main",
              "left-sidebar",
              "right-sidebar",
              "footer"
            ],
            "template": "1fr"
          }
        }
      }
    },
    "landing": {
      "id": "landing",
      "name": "Landing Page",
      "description": "Full-width landing page layout",
      "preview": "/themes/default/previews/landing.png",
      "structure": {
        "type": "flex",
        "direction": "column",
        "gap": "0"
      },
      "zones": {
        "header": {
          "order": 1,
          "sticky": true
        },
        "hero": {
          "order": 2,
          "fullWidth": true,
          "minHeight": "80vh"
        },
        "features": {
          "order": 3,
          "zoneId": "custom-features",
          "containerWidth": "1200px"
        },
        "testimonials": {
          "order": 4,
          "zoneId": "custom-testimonials",
          "backgroundColor": "var(--wp--preset--color--gray-50)"
        },
        "cta": {
          "order": 5,
          "zoneId": "custom-cta",
          "fullWidth": true
        },
        "footer": {
          "order": 6
        }
      },
      "responsive": {
        "desktop": {
          "minWidth": "1024px"
        },
        "tablet": {
          "minWidth": "768px",
          "maxWidth": "1023px"
        },
        "mobile": {
          "maxWidth": "767px"
        }
      }
    }
  },
  "breakpoints": {
    "mobile": {
      "max": 767,
      "unit": "px"
    },
    "tablet": {
      "min": 768,
      "max": 1023,
      "unit": "px"
    },
    "desktop": {
      "min": 1024,
      "unit": "px"
    },
    "wide": {
      "min": 1280,
      "unit": "px"
    }
  },
  "containerSizes": {
    "small": "640px",
    "medium": "840px",
    "large": "1200px",
    "wide": "1400px",
    "full": "100%"
  },
  "spacing": {
    "unit": "rem",
    "scale": {
      "xs": 0.5,
      "sm": 1,
      "md": 1.5,
      "lg": 2,
      "xl": 3,
      "xxl": 4
    }
  },
  "transitions": {
    "duration": {
      "fast": "150ms",
      "normal": "300ms",
      "slow": "500ms"
    },
    "easing": {
      "linear": "linear",
      "ease": "ease",
      "easeIn": "ease-in",
      "easeOut": "ease-out",
      "easeInOut": "ease-in-out"
    }
  }
}