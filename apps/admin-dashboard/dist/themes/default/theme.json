{
  "$schema": "https://schemas.wp.org/trunk/theme.json",
  "version": 2,
  "title": "Default Theme",
  "settings": {
    "color": {
      "palette": [
        {
          "slug": "primary",
          "color": "#007cba",
          "name": "Primary"
        },
        {
          "slug": "secondary",
          "color": "#6c757d",
          "name": "Secondary"
        },
        {
          "slug": "accent",
          "color": "#28a745",
          "name": "Accent"
        },
        {
          "slug": "black",
          "color": "#000000",
          "name": "Black"
        },
        {
          "slug": "white",
          "color": "#ffffff",
          "name": "White"
        },
        {
          "slug": "gray",
          "color": "#6c757d",
          "name": "Gray"
        }
      ],
      "gradients": [
        {
          "slug": "primary-to-secondary",
          "gradient": "linear-gradient(135deg, #007cba 0%, #6c757d 100%)",
          "name": "Primary to Secondary"
        }
      ],
      "custom": true,
      "customGradient": true
    },
    "typography": {
      "fontFamilies": [
        {
          "fontFamily": "-apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, sans-serif",
          "slug": "system",
          "name": "System Font"
        },
        {
          "fontFamily": "Consolas, Monaco, 'Andale Mono', monospace",
          "slug": "monospace",
          "name": "Monospace"
        }
      ],
      "fontSizes": [
        {
          "slug": "small",
          "size": "13px",
          "name": "Small"
        },
        {
          "slug": "normal",
          "size": "16px",
          "name": "Normal"
        },
        {
          "slug": "medium",
          "size": "20px",
          "name": "Medium"
        },
        {
          "slug": "large",
          "size": "24px",
          "name": "Large"
        },
        {
          "slug": "x-large",
          "size": "32px",
          "name": "Extra Large"
        }
      ],
      "customFontSize": true
    },
    "spacing": {
      "units": ["px", "em", "rem", "%", "vw", "vh"],
      "padding": true,
      "margin": true
    },
    "layout": {
      "contentSize": "840px",
      "wideSize": "1100px"
    },
    "blocks": {
      "core/paragraph": {
        "typography": {
          "lineHeight": true
        }
      },
      "core/heading": {
        "typography": {
          "lineHeight": true
        },
        "color": {
          "palette": [
            {
              "slug": "primary",
              "color": "#007cba",
              "name": "Primary"
            },
            {
              "slug": "black",
              "color": "#000000",
              "name": "Black"
            }
          ]
        }
      }
    }
  },
  "styles": {
    "elements": {
      "body": {
        "color": {
          "text": "#1e1e1e",
          "background": "#ffffff"
        },
        "typography": {
          "fontFamily": "var(--wp--preset--font-family--system)",
          "fontSize": "var(--wp--preset--font-size--normal)",
          "lineHeight": "1.6"
        }
      },
      "h1": {
        "typography": {
          "fontSize": "2.5rem",
          "fontWeight": "700",
          "lineHeight": "1.2"
        }
      },
      "h2": {
        "typography": {
          "fontSize": "2rem",
          "fontWeight": "700",
          "lineHeight": "1.3"
        }
      },
      "h3": {
        "typography": {
          "fontSize": "1.75rem",
          "fontWeight": "600",
          "lineHeight": "1.3"
        }
      },
      "h4": {
        "typography": {
          "fontSize": "1.5rem",
          "fontWeight": "600",
          "lineHeight": "1.4"
        }
      },
      "h5": {
        "typography": {
          "fontSize": "1.25rem",
          "fontWeight": "500",
          "lineHeight": "1.4"
        }
      },
      "h6": {
        "typography": {
          "fontSize": "1rem",
          "fontWeight": "500",
          "lineHeight": "1.4"
        }
      },
      "link": {
        "color": {
          "text": "var(--wp--preset--color--primary)"
        }
      }
    },
    "blocks": {
      "core/button": {
        "variations": {
          "fill": {
            "color": {
              "background": "var(--wp--preset--color--primary)",
              "text": "#ffffff"
            }
          },
          "outline": {
            "color": {
              "text": "var(--wp--preset--color--primary)"
            },
            "border": {
              "color": "var(--wp--preset--color--primary)",
              "width": "2px",
              "style": "solid"
            }
          }
        }
      }
    }
  }
}