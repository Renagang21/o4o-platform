{
  "$schema": "https://schemas.wp.org/trunk/theme.json",
  "version": 2,
  "title": "Twenty Twenty-Four",
  "description": "Modern, clean design system based on WordPress Twenty Twenty-Four theme",
  
  "settings": {
    "appearanceTools": true,
    "useRootPaddingAwareAlignments": true,
    "contentSize": "620px",
    "wideSize": "1280px",
    
    "color": {
      "palette": [
        {
          "color": "#1a1a1a",
          "name": "Base",
          "slug": "base"
        },
        {
          "color": "#ffffff",
          "name": "Contrast",
          "slug": "contrast"
        },
        {
          "color": "#f6f6f6",
          "name": "Primary",
          "slug": "primary"
        },
        {
          "color": "#ffffff",
          "name": "Secondary", 
          "slug": "secondary"
        },
        {
          "color": "#dcdcdc",
          "name": "Tertiary",
          "slug": "tertiary"
        }
      ],
      "gradients": [
        {
          "gradient": "linear-gradient(to bottom, var(--wp--preset--color--tertiary) 0%, var(--wp--preset--color--primary) 100%)",
          "name": "Vertical tertiary to primary",
          "slug": "vertical-tertiary-to-primary"
        },
        {
          "gradient": "linear-gradient(to bottom, var(--wp--preset--color--secondary) 0%, var(--wp--preset--color--tertiary) 100%)",
          "name": "Vertical secondary to tertiary",
          "slug": "vertical-secondary-to-tertiary"
        }
      ],
      "duotone": [
        {
          "colors": ["#1a1a1a", "#ffffff"],
          "name": "Black and white",
          "slug": "black-and-white"
        }
      ]
    },
    
    "typography": {
      "fluid": true,
      "fontFamilies": [
        {
          "name": "System Font",
          "slug": "system-font",
          "fontFamily": "-apple-system,BlinkMacSystemFont,\"Segoe UI\",Roboto,Oxygen-Sans,Ubuntu,Cantarell,\"Helvetica Neue\",sans-serif"
        },
        {
          "name": "Source Serif Pro",
          "slug": "source-serif-pro",
          "fontFamily": "\"Source Serif Pro\", serif",
          "fontFace": [
            {
              "fontFamily": "Source Serif Pro",
              "fontStretch": "normal",
              "fontStyle": "normal",
              "fontWeight": "200 900",
              "src": ["file:./assets/fonts/SourceSerifPro-VariableFont_wght.ttf.woff2"]
            },
            {
              "fontFamily": "Source Serif Pro",
              "fontStretch": "normal", 
              "fontStyle": "italic",
              "fontWeight": "200 900",
              "src": ["file:./assets/fonts/SourceSerifPro-Italic-VariableFont_wght.ttf.woff2"]
            }
          ]
        }
      ],
      "fontSizes": [
        {
          "name": "Small",
          "size": "0.9rem",
          "slug": "small"
        },
        {
          "name": "Medium",
          "size": "1.05rem",
          "slug": "medium"
        },
        {
          "name": "Large",
          "size": "1.85rem",
          "slug": "large"
        },
        {
          "name": "Extra Large",
          "size": "3.25rem",
          "slug": "x-large"
        },
        {
          "name": "Extra Extra Large",
          "size": "4rem",
          "slug": "xx-large"
        }
      ]
    },
    
    "layout": {
      "contentSize": "620px",
      "wideSize": "1280px"
    },
    
    "spacing": {
      "spacingScale": {
        "operator": "*",
        "increment": 1.5,
        "steps": 7,
        "mediumStep": 1.5,
        "unit": "rem"
      },
      "spacingSizes": [
        {
          "name": "1",
          "size": "0.5rem",
          "slug": "20"
        },
        {
          "name": "2",
          "size": "1rem",
          "slug": "30"
        },
        {
          "name": "3",
          "size": "1.5rem",
          "slug": "40"
        },
        {
          "name": "4",
          "size": "2rem",
          "slug": "50"
        },
        {
          "name": "5",
          "size": "3rem",
          "slug": "60"
        },
        {
          "name": "6",
          "size": "4rem",
          "slug": "70"
        },
        {
          "name": "7",
          "size": "6rem",
          "slug": "80"
        }
      ],
      "units": ["%", "px", "em", "rem", "vh", "vw"]
    },
    
    "border": {
      "color": true,
      "radius": true,
      "style": true,
      "width": true
    },
    
    "shadow": {
      "presets": [
        {
          "name": "Natural",
          "slug": "natural",
          "shadow": "6px 6px 9px rgba(0, 0, 0, 0.2)"
        },
        {
          "name": "Deep",
          "slug": "deep", 
          "shadow": "12px 12px 50px rgba(0, 0, 0, 0.4)"
        },
        {
          "name": "Sharp",
          "slug": "sharp",
          "shadow": "6px 6px 0px rgba(0, 0, 0, 0.2)"
        },
        {
          "name": "Outlined",
          "slug": "outlined",
          "shadow": "6px 6px 0px -3px rgba(255, 255, 255, 1), 6px 6px rgba(0, 0, 0, 1)"
        },
        {
          "name": "Crisp",
          "slug": "crisp",
          "shadow": "6px 6px 0px rgba(0, 0, 0, 1)"
        }
      ]
    }
  },
  
  "styles": {
    "color": {
      "background": "var(--wp--preset--color--primary)",
      "text": "var(--wp--preset--color--contrast)"
    },
    "typography": {
      "fontFamily": "var(--wp--preset--font-family--source-serif-pro)",
      "fontSize": "var(--wp--preset--font-size--medium)",
      "fontWeight": "400",
      "lineHeight": "1.6"
    },
    "spacing": {
      "blockGap": "1.5rem",
      "padding": {
        "top": "var(--wp--preset--spacing--40)",
        "right": "var(--wp--preset--spacing--30)",
        "bottom": "var(--wp--preset--spacing--40)",
        "left": "var(--wp--preset--spacing--30)"
      }
    },
    "elements": {
      "h1": {
        "typography": {
          "fontSize": "var(--wp--preset--font-size--xx-large)",
          "fontWeight": "400",
          "lineHeight": "1.15"
        }
      },
      "h2": {
        "typography": {
          "fontSize": "var(--wp--preset--font-size--x-large)",
          "fontWeight": "400",
          "lineHeight": "1.2"
        }
      },
      "h3": {
        "typography": {
          "fontSize": "var(--wp--preset--font-size--large)",
          "fontWeight": "400"
        }
      },
      "h4": {
        "typography": {
          "fontSize": "var(--wp--preset--font-size--medium)",
          "fontWeight": "600"
        }
      },
      "h5": {
        "typography": {
          "fontSize": "var(--wp--preset--font-size--medium)",
          "fontWeight": "700",
          "textTransform": "uppercase"
        }
      },
      "h6": {
        "typography": {
          "fontSize": "var(--wp--preset--font-size--small)",
          "fontWeight": "700",
          "textTransform": "uppercase"
        }
      },
      "link": {
        "color": {
          "text": "var(--wp--preset--color--contrast)"
        },
        "typography": {
          "textDecoration": "underline"
        },
        ":hover": {
          "typography": {
            "textDecoration": "none"
          }
        }
      },
      "button": {
        "border": {
          "radius": "0"
        },
        "color": {
          "background": "var(--wp--preset--color--primary)",
          "text": "var(--wp--preset--color--contrast)"
        },
        "spacing": {
          "padding": {
            "top": "0.6rem",
            "right": "1rem", 
            "bottom": "0.6rem",
            "left": "1rem"
          }
        },
        "typography": {
          "fontSize": "var(--wp--preset--font-size--medium)",
          "fontWeight": "500"
        },
        ":hover": {
          "color": {
            "background": "var(--wp--preset--color--contrast)",
            "text": "var(--wp--preset--color--primary)"
          }
        }
      }
    },
    "blocks": {
      "core/navigation": {
        "typography": {
          "fontSize": "var(--wp--preset--font-size--small)",
          "fontWeight": "500"
        },
        "elements": {
          "link": {
            "typography": {
              "textDecoration": "none"
            },
            ":hover": {
              "typography": {
                "textDecoration": "underline"
              }
            }
          }
        }
      },
      "core/post-title": {
        "typography": {
          "fontSize": "var(--wp--preset--font-size--x-large)",
          "fontWeight": "400",
          "lineHeight": "1.2"
        }
      },
      "core/post-date": {
        "color": {
          "text": "var(--wp--preset--color--contrast)"
        },
        "typography": {
          "fontSize": "var(--wp--preset--font-size--small)"
        }
      },
      "core/post-terms": {
        "typography": {
          "fontSize": "var(--wp--preset--font-size--small)"
        }
      },
      "core/pullquote": {
        "border": {
          "style": "solid",
          "width": "1px 0"
        },
        "spacing": {
          "padding": {
            "top": "var(--wp--preset--spacing--40)",
            "bottom": "var(--wp--preset--spacing--40)"
          }
        },
        "typography": {
          "fontSize": "var(--wp--preset--font-size--large)",
          "fontStyle": "italic"
        }
      },
      "core/quote": {
        "border": {
          "color": "var(--wp--preset--color--primary)",
          "style": "solid",
          "width": "0 0 0 1px"
        },
        "spacing": {
          "padding": {
            "left": "var(--wp--preset--spacing--30)"
          }
        },
        "typography": {
          "fontStyle": "normal"
        }
      },
      "core/gallery": {
        "spacing": {
          "margin": {
            "bottom": "var(--wp--preset--spacing--50)"
          }
        }
      },
      "core/separator": {
        "border": {
          "color": "var(--wp--preset--color--contrast)",
          "style": "solid",
          "width": "0 0 1px 0"
        },
        "color": {
          "text": "var(--wp--preset--color--contrast)"
        }
      },
      "core/site-tagline": {
        "typography": {
          "fontSize": "var(--wp--preset--font-size--small)"
        }
      },
      "core/site-title": {
        "typography": {
          "fontSize": "var(--wp--preset--font-size--medium)",
          "fontWeight": "700",
          "lineHeight": "1.2",
          "textTransform": "uppercase"
        }
      }
    }
  },
  
  "templateParts": [
    {
      "name": "header",
      "title": "Header",
      "area": "header"
    },
    {
      "name": "footer",
      "title": "Footer", 
      "area": "footer"
    }
  ],
  
  "customTemplates": [
    {
      "name": "page-home",
      "title": "Homepage",
      "postTypes": ["page"]
    },
    {
      "name": "page-about",
      "title": "About", 
      "postTypes": ["page"]
    },
    {
      "name": "page-contact",
      "title": "Contact",
      "postTypes": ["page"]
    }
  ]
}