{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@/components/*": ["./src/components/*"],
      "@/pages/*": ["./src/pages/*"],
      "@/hooks/*": ["./src/hooks/*"],
      "@/utils/*": ["./src/utils/*"],
      "@/types/*": ["./src/types/*"],
      "@/api/*": ["./src/api/*"],
      "@/styles/*": ["./src/styles/*"],
      "@o4o/auth-client": ["../../packages/auth-client/src"],
      "@o4o/auth-context": ["../../packages/auth-context/src"],
      "@o4o/types": ["../../packages/types/src"],
      "@o4o/utils": ["../../packages/utils/src"],
      "@o4o/ui": ["../../packages/ui/src"]
    },
    "types": []
  },
  "include": ["src", "vite-env.d.ts"],
  "exclude": [
    "**/*.test.tsx",
    "**/*.test.ts",
    "**/*.spec.ts",
    "**/*.spec.tsx",
    "**/e2e/**",
    "src/test/**",
    "src/test-utils/**",
    "src/components/users/__tests__/**",
    "src/pages/Users/__tests__/**",
    "src/pages/Users/**"
  ],
  "references": [{ "path": "./tsconfig.node.json" }]
}