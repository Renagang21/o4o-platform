{
  "name": "@o4o/api-gateway",
  "version": "1.0.0",
  "description": "API Gateway for O4O Platform",
  "type": "module",
  "scripts": {
    "dev": "bash -c 'nodemon --experimental-specifier-resolution=node src/server.ts'",
    "build": "bash -c 'npx tsc'",
    "start": "bash -c 'node --experimental-specifier-resolution=node dist/server.js'",
    "type-check": "bash -c 'npx tsc --noEmit'",
    "lint": "bash -c 'eslint src/**/*.ts'",
    "test": "bash -c 'npx vitest --passWithNoTests'"
  },
  "dependencies": {
    "@o4o/types": "file:../../packages/types",
    "@o4o/utils": "file:../../packages/utils",
    "axios": "^1.10.0",
    "compression": "^1.7.6",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "dotenv": "^16.4.7",
    "express": "^5.1.0",
    "express-async-errors": "^3.1.1",
    "express-rate-limit": "^7.5.0",
    "helmet": "^8.0.0",
    "http-proxy-middleware": "^3.0.0",
    "ioredis": "^5.4.2",
    "joi": "^17.13.3",
    "jsonwebtoken": "^9.0.2",
    "rate-limit-redis": "^4.2.0",
    "response-time": "^2.3.2",
    "winston": "^3.17.0"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "6.6.4",
    "@testing-library/react": "16.3.0",
    "@types/compression": "^1.7.5",
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.3",
    "@types/node": "^22.10.2",
    "@types/response-time": "^2.3.8",
    "@vitejs/plugin-react": "5.0.0",
    "@vitest/ui": "^2.1.8",
    "jsdom": "26.1.0",
    "nodemon": "^3.1.10",
    "typescript": "~5.9.2",
    "vite": "7.1.1",
    "vitest": "3.2.4"
  },
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=10.0.0"
  }
}
