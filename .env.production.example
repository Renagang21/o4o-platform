# Production Environment Configuration
# Copy this file to .env.production and update with your production values

# Server Configuration
NODE_ENV=production
PORT=4000

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_USERNAME=postgres
DB_PASSWORD=your_secure_password
DB_NAME=o4o_platform

# Authentication
JWT_SECRET=your-production-jwt-secret-key
JWT_EXPIRES_IN=7d
SESSION_SECRET=your-production-session-secret

# Redis Configuration (Optional)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# OAuth Configuration (Optional - leave empty if not using)
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=

# URLs
FRONTEND_URL=https://www.neture.co.kr
ADMIN_URL=https://admin.neture.co.kr
API_URL=https://api.neture.co.kr

# Cookie Configuration
COOKIE_DOMAIN=.neture.co.kr

# File Upload
UPLOAD_DIR=/home/ubuntu/o4o-platform/uploads
MAX_FILE_SIZE=10485760

# Session Sync (Optional)
SESSION_SYNC_ENABLED=false

# Logging
LOG_LEVEL=info