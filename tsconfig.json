{
  "compilerOptions": {
    // ğŸ¯ ê¸°ë³¸ ì˜µì…˜
    "target": "ES2022",
    "module": "commonjs",
    "lib": ["ES2022", "DOM", "DOM.Iterable"],
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "allowJs": true,
    "checkJs": false,
    
    // ğŸ“ ê²½ë¡œ ì„¤ì •
    "baseUrl": "./",
    "paths": {
      "@/*": ["./src/*"],
      "@api/*": ["./apps/api-server/src/*"],
      "@web/*": ["./apps/main-site/src/*"],
      "@admin/*": ["./apps/admin-dashboard/src/*"],
      "@o4o/shared-components": ["./packages/shared-components/src"],
      "@o4o/shared-types": ["./packages/shared-types/src"],
      "@o4o/shared-utils": ["./packages/shared-utils/src"],
      "@tests/*": ["./tests/*"]
    },
    "rootDirs": ["./apps", "./packages", "./tests"],
    
    // ğŸ“¤ ì¶œë ¥ ì„¤ì •
    "outDir": "./dist",
    "rootDir": "./",
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    
    // ğŸ”· íƒ€ì… ê²€ì‚¬ ì˜µì…˜
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "strictBindCallApply": true,
    "strictPropertyInitialization": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedIndexedAccess": true,
    "noImplicitOverride": true,
    "allowUnusedLabels": false,
    "allowUnreachableCode": false,
    
    // ğŸ“¦ ëª¨ë“ˆ ì„¤ì •
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": true,
    
    // ğŸ”§ ê³ ê¸‰ ì˜µì…˜
    "skipLibCheck": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "incremental": true,
    "tsBuildInfoFile": "./dist/.tsbuildinfo",
    
    // âš›ï¸ JSX ì„¤ì • (React)
    "jsx": "react-jsx",
    "jsxImportSource": "react",
    
    // ğŸ¯ ì¶”ê°€ ê²€ì‚¬
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "exactOptionalPropertyTypes": true,
    "noPropertyAccessFromIndexSignature": false,
    
    // ğŸ“Š íƒ€ì… ì •ë³´
    "typeRoots": ["./node_modules/@types", "./types"],
    "types": ["node", "jest", "@types/testing-library__jest-dom"]
  },
  "include": [
    "apps/**/*",
    "packages/**/*",
    "tests/**/*",
    "scripts/**/*",
    "*.config.ts",
    "*.config.js"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "build",
    ".next",
    "coverage",
    "playwright-report",
    "test-results",
    "**/*.min.js",
    "**/node_modules",
    "**/dist",
    "**/build"
  ],
  "ts-node": {
    "esm": true,
    "experimentalSpecifierResolution": "node"
  }
}
