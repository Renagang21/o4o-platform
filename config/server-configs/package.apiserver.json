{
  "name": "o4o-platform",
  "version": "1.0.0",
  "description": "O4O Platform - API Server Configuration",
  "type": "module",
  "private": true,
  "workspaces": [
    "apps/api-server",
    "packages/types",
    "packages/utils",
    "packages/auth-client",
    "packages/crowdfunding-types",
    "packages/forum-types"
  ],
  "engines": {
    "node": ">=22.18.0",
    "npm": ">=10.9.3"
  },
  "scripts": {
    "start": "cd apps/api-server && pnpm run start",
    "dev": "cd apps/api-server && pnpm run dev",
    "build": "pnpm run build:packages && cd apps/api-server && pnpm run build",
    "build:packages": "pnpm run build:types && pnpm run build:utils && pnpm run build:auth-client && pnpm run build:crowdfunding-types && pnpm run build:forum-types",
    "build:types": "cd packages/types && pnpm run build",
    "build:utils": "cd packages/utils && pnpm run build",
    "build:auth-client": "cd packages/auth-client && pnpm run build",
    "build:crowdfunding-types": "cd packages/crowdfunding-types && pnpm run build",
    "build:forum-types": "cd packages/forum-types && pnpm run build",
    "migration:generate": "cd apps/api-server && pnpm run migration:generate",
    "migration:run": "cd apps/api-server && pnpm run migration:run",
    "migration:revert": "cd apps/api-server && pnpm run migration:revert",
    "type-check": "cd apps/api-server && pnpm run type-check",
    "lint": "cd apps/api-server && pnpm run lint",
    "lint:fix": "cd apps/api-server && pnpm run lint:fix",
    "test": "cd apps/api-server && pnpm run test",
    "pm2:start": "pm2 start ecosystem.config.apiserver.cjs",
    "pm2:stop": "pm2 stop ecosystem.config.apiserver.cjs",
    "pm2:restart": "pm2 restart ecosystem.config.apiserver.cjs"
  },
  "dependencies": {
    "@types/bcrypt": "6.0.0",
    "@types/cron": "2.0.1",
    "@types/jsonwebtoken": "9.0.10",
    "@types/nodemailer": "6.4.17",
    "bcrypt": "6.0.0",
    "class-validator": "0.14.2",
    "cron": "4.3.3",
    "exceljs": "4.4.0",
    "express-validator": "7.2.1",
    "jsonwebtoken": "9.0.2",
    "node-cache": "5.1.2",
    "nodemailer": "7.0.5",
    "rate-limit-redis": "^4.2.1",
    "slugify": "^1.6.6",
    "swagger-jsdoc": "6.2.8",
    "swagger-ui-express": "5.0.1",
    "xml2js": "0.6.2"
  },
  "devDependencies": {
    "@types/jest": "29.5.14",
    "@types/node-cron": "3.0.11",
    "@typescript-eslint/eslint-plugin": "8.39.0",
    "@typescript-eslint/parser": "8.39.0",
    "eslint": "^9.31.0",
    "jest": "29.7.0",
    "prettier": "^3.0.0",
    "ts-jest": "29.4.1",
    "typescript": "~5.9.2"
  }
}