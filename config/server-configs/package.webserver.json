{
  "name": "o4o-platform",
  "version": "1.0.0",
  "description": "O4O Platform - Web Server Configuration",
  "type": "module",
  "private": true,
  "workspaces": [
    "apps/admin-dashboard",
    "apps/main-site",
    "apps/storefront",
    "apps/ecommerce",
    "apps/crowdfunding",
    "apps/forum",
    "apps/digital-signage",
    "packages/*",
    "!packages/*.backup"
  ],
  "engines": {
    "node": ">=22.18.0",
    "npm": ">=10.9.3"
  },
  "overrides": {
    "react": "18.3.1",
    "react-dom": "18.3.1",
    "@types/react": "18.3.12",
    "@types/react-dom": "18.3.1"
  },
  "scripts": {
    "dev": "concurrently \"pnpm run dev:web\" \"pnpm run dev:admin\"",
    "dev:web": "pnpm --filter=@o4o/main-site run dev",
    "dev:admin": "pnpm --filter=@o4o/admin-dashboard run dev",
    "dev:ecommerce": "pnpm --filter=@o4o/ecommerce run dev",
    "dev:crowdfunding": "pnpm --filter=@o4o/crowdfunding run dev",
    "dev:signage": "pnpm --filter=@o4o/digital-signage run dev",
    "build": "pnpm run build:packages && pnpm run build:apps",
    "build:packages": "pnpm run build:types && pnpm run build:utils && pnpm run build:ui && pnpm run build:auth-client && pnpm run build:auth-context && pnpm run build:crowdfunding-types && pnpm run build:forum-types && pnpm run build:shortcodes && pnpm run build:supplier-connector",
    "build:types": "pnpm --filter=@o4o/types run build",
    "build:utils": "pnpm --filter=@o4o/utils run build",
    "build:ui": "pnpm --filter=@o4o/ui run build",
    "build:auth-client": "pnpm --filter=@o4o/auth-client run build",
    "build:auth-context": "pnpm --filter=@o4o/auth-context run build",
    "build:crowdfunding-types": "pnpm --filter=@o4o/crowdfunding-types run build",
    "build:forum-types": "pnpm --filter=@o4o/forum-types run build",
    "build:shortcodes": "pnpm --filter=@o4o/shortcodes run build",
    "build:supplier-connector": "pnpm --filter=@o4o/supplier-connector run build",
    "build:apps": "pnpm run build:main-site && pnpm run build:admin && pnpm run build:ecommerce && pnpm run build:crowdfunding && pnpm run build:forum && pnpm run build:signage",
    "build:main-site": "pnpm --filter=@o4o/main-site run build",
    "build:admin": "pnpm --filter=@o4o/admin-dashboard run build",
    "build:ecommerce": "pnpm --filter=@o4o/ecommerce run build",
    "build:crowdfunding": "pnpm --filter=@o4o/crowdfunding run build",
    "build:forum": "pnpm --filter=@o4o/forum run build",
    "build:signage": "pnpm --filter=@o4o/digital-signage run build",
    "type-check": "./scripts/dev.sh type-check",
    "lint": "./scripts/dev.sh lint",
    "lint:fix": "./scripts/dev.sh lint:fix",
    "pm2:start": "pm2 start ecosystem.config.webserver.cjs",
    "pm2:stop": "pm2 stop ecosystem.config.webserver.cjs",
    "pm2:restart": "pm2 restart ecosystem.config.webserver.cjs"
  },
  "dependencies": {
    "@mui/icons-material": "7.3.1",
    "@mui/material": "7.3.1",
    "@radix-ui/react-alert-dialog": "1.1.14",
    "@radix-ui/react-avatar": "1.1.10",
    "@radix-ui/react-toast": "1.2.14",
    "@tailwindcss/postcss": "^4.0.0-beta.8",
    "@tosspayments/payment-sdk": "1.9.1",
    "react": "18.3.1",
    "react-dom": "18.3.1"
  },
  "devDependencies": {
    "@eslint/js": "9.33.0",
    "@testing-library/react": "16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/react": "18.3.12",
    "@types/react-dom": "18.3.1",
    "@typescript-eslint/eslint-plugin": "8.39.0",
    "@typescript-eslint/parser": "8.39.0",
    "@vitejs/plugin-react": "^4.7.0",
    "@vitest/ui": "3.2.4",
    "autoprefixer": "^10.4.20",
    "concurrently": "^7.6.0",
    "eslint": "^9.31.0",
    "eslint-plugin-react": "7.37.5",
    "eslint-plugin-react-hooks": "5.2.0",
    "postcss": "^8.4.49",
    "prettier": "^3.0.0",
    "tailwindcss": "^4.1.0",
    "typescript": "~5.9.2",
    "vite": "^5.4.0",
    "vitest": "3.2.4"
  }
}