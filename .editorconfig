# =============================================================================
# EditorConfig for Cross-Platform Development (Windows + Linux/AWS Lightsail)
# https://editorconfig.org
# =============================================================================

# Top-most EditorConfig file
root = true

# =============================================================================
# Default Settings for All Files
# =============================================================================
[*]
# Use LF line endings for cross-platform compatibility
end_of_line = lf
# UTF-8 encoding
charset = utf-8
# Insert final newline
insert_final_newline = true
# Remove trailing whitespace
trim_trailing_whitespace = true
# Use spaces for indentation
indent_style = space
indent_size = 2

# =============================================================================
# JavaScript / TypeScript / React
# =============================================================================
[*.{js,jsx,ts,tsx,mjs,cjs}]
indent_size = 2

# =============================================================================
# Web Files
# =============================================================================
[*.{html,htm,css,scss,sass,less}]
indent_size = 2

# =============================================================================
# Data & Config Files
# =============================================================================
[*.{json,yaml,yml,toml}]
indent_size = 2

[*.xml]
indent_size = 4

# =============================================================================
# Documentation
# =============================================================================
[*.md]
# Don't trim trailing whitespace in markdown (needed for line breaks)
trim_trailing_whitespace = false

# =============================================================================
# Shell Scripts (Linux/Bash)
# =============================================================================
[*.{sh,bash,zsh}]
end_of_line = lf
indent_size = 2

# =============================================================================
# Windows Batch/PowerShell Files
# =============================================================================
[*.{bat,cmd}]
end_of_line = crlf

[*.ps1]
end_of_line = crlf
indent_size = 4

# =============================================================================
# Makefiles (require tabs)
# =============================================================================
[Makefile]
indent_style = tab

[*.mk]
indent_style = tab

# =============================================================================
# Python (if any)
# =============================================================================
[*.py]
indent_size = 4

# =============================================================================
# SQL Files
# =============================================================================
[*.sql]
indent_size = 2

# =============================================================================
# Docker
# =============================================================================
[Dockerfile*]
indent_size = 2

[docker-compose*.yml]
indent_size = 2
